<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/activity_domolife_header"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/bg_color"
            android:layout_height="@dimen/dimen_5_dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/rel_baby_sex"
            android:background="@drawable/border_top_bottom_line"
            android:layout_height="90px">
            <TextView
                android:layout_marginLeft="24px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/home_text_color"
                android:textSize="30px"
                android:text="宝宝性别"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_15_dp"
                android:drawableRight="@drawable/right_btn_nor"
                android:paddingRight="@dimen/gap_right"
                android:id="@+id/tv_baby_data_sex"
                android:text="小王子"
                android:textSize="28px"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black_t"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:id="@+id/rel_baby_birth"
            android:background="@drawable/border_top_bottom_line"
            android:layout_height="90px">
            <TextView
                android:layout_marginLeft="24px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/home_text_color"
                android:textSize="30px"
                android:text="生产/预产期"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_15_dp"
                android:drawableRight="@drawable/right_btn_nor"
                android:paddingRight="@dimen/gap_right"
                android:id="@+id/tv_baby_data_time"
                android:text="2016-07-26"
                android:textSize="28px"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black_t"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="56px"
            android:id="@+id/ll_layout_baby_data"
            android:gravity="center"
            android:paddingLeft="43px"
            android:paddingRight="43px"
            android:visibility="gone"
            android:layout_height="88px">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="确定"
                    android:clickable="true"
                    android:gravity="center"
                    android:id="@+id/tv_baby_data_ok"
                    android:textSize="40px"
                    android:textColor="@color/white"
                    android:background="#ff4719"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="删除"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginLeft="22px"
                    android:id="@+id/tv_baby_data_close"
                    android:layout_toRightOf="@id/tv_baby_data_ok"
                    android:textSize="40px"
                    android:textColor="@color/white"
                    android:background="#ff4719"
                    android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/layout_communal_time_multi"/>
    </RelativeLayout>
</RelativeLayout>
