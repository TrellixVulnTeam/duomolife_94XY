<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include layout="@layout/activity_duomolife_blue_header"/>
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        android:paddingLeft="120px"
        android:paddingRight="120px"
        android:id="@+id/ll_phone_unBind"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="114px"
            android:layout_height="wrap_content">
            <EditText
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:textColor="@color/home_text_color"
                android:textSize="32px"
                android:inputType="number|phone"
                android:hint="手机号"
                android:singleLine="true"
                android:background="@drawable/border_bottom_line"
                android:id="@+id/edit_binding_mobile"
                android:maxLength="11"
                android:minHeight="115px"
                android:textColorHint="@color/text_gray_hint_n"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_line"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/home_text_color"
                android:textSize="32px"
                android:inputType="number|phone"
                android:maxLength="6"
                android:background="@drawable/border_bottom_line"
                android:id="@+id/edit_get_code"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textColorHint="@color/text_gray_hint_n"
                android:minHeight="115px"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/gap_right"
                    android:clickable="true"
                    android:textSize="24px"
                    android:layout_gravity="center"
                    android:id="@+id/tv_bind_send_code"
                    android:textColor="@color/selector_font_blue_hint_gray"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/reg_bind_code_gif_view"
                    android:layout_width="40px"
                    android:paddingRight="@dimen/gap_right"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateDrawable="@drawable/anim_loading_flower_rotate"
                    android:indeterminateBehavior="repeat" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_bind_mobile_set_password"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@drawable/border_bottom_line"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:textColor="@color/home_text_color"
                    android:textSize="32px"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:id="@+id/edit_bind_set_password_new"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/text_gray_hint_n"
                    android:hint="请输入密码，最少6位"
                    android:layout_height="wrap_content"
                    android:minHeight="115px"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="126px"
            android:layout_width="match_parent"
            android:id="@+id/tv_bind_mobile_click"
            android:text="绑定手机号"
            android:visibility="visible"
            android:gravity="center"
            android:clickable="true"
            android:textSize="32px"
            android:background="@drawable/login_bt_bg"
            android:textColor="@color/text_login_gray_s"
            android:layout_height="90px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/ll_phone_change"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="190px"
            android:layout_width="match_parent"
            android:text="当前手机号"
            android:gravity="center"
            android:textSize="28px"
            android:textColor="@color/text_login_gray_s"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="56px"
            android:textColor="@color/text_black_t"
            android:textSize="32px"
            android:gravity="center"
            android:id="@+id/tv_bind_mobile_num"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="120px"
            android:layout_marginRight="120px"
            android:layout_marginTop="156px"
            android:layout_width="match_parent"
            android:id="@+id/tv_change_mobile_phone_number"
            android:text="更换手机号"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:textSize="32px"
            android:background="@drawable/login_bt_bg"
            android:textColor="@color/text_login_gray_s"
            android:layout_height="90px" />
    </LinearLayout>
</LinearLayout>