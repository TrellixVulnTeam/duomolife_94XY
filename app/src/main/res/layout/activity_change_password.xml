<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_domolife_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:divider="@drawable/item_divider_gray_f_two_px"
        android:showDividers="middle"
        android:layout_marginTop="20px">
        <EditText
            android:paddingLeft="30px"
            android:paddingRight="36px"
            android:id="@+id/edit_change_password_old"
            android:layout_width="match_parent"
            android:layout_height="104px"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/home_text_color"
            android:textColorHint="@color/text_gray_hint_n"
            android:textSize="32px" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="104px">
                <EditText
                    android:paddingLeft="30px"
                    android:paddingRight="36px"
                    android:id="@+id/edit_change_password_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入新密码 (至少6位)"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/home_text_color"
                    android:textColorHint="@color/text_gray_hint_n"
                    android:textSize="32px" />
                <ImageView
                    android:layout_width="116px"
                    android:paddingTop="40px"
                    android:paddingBottom="40px"
                    android:paddingRight="16px"
                    android:id="@+id/iv_show_pas"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pwd_eye_icon"
                    android:layout_height="match_parent" />
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>
