<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="true">

    <include layout="@layout/activity_domolife_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:divider="@drawable/item_divider_gray_f_one_px"
        android:showDividers="middle"
        android:layout_marginTop="@dimen/sc_mm_20">
        <EditText
            android:paddingLeft="@dimen/gap_left"
            android:paddingRight="@dimen/gap_right"
            android:id="@+id/edit_change_password_old"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_104"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/home_text_color"
            android:textColorHint="@color/text_gray_hint_n"
            android:textSize="@dimen/sc_mm_32" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sc_mm_104">
                <EditText
                    android:paddingLeft="@dimen/gap_left"
                    android:paddingRight="@dimen/gap_right"
                    android:id="@+id/edit_change_password_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/PasswordRule"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColor="@color/home_text_color"
                    android:textColorHint="@color/text_gray_hint_n"
                    android:textSize="@dimen/sc_mm_32" />
                <ImageView
                    android:layout_width="@dimen/sc_mm_116"
                    android:paddingTop="@dimen/sc_mm_40"
                    android:paddingBottom="@dimen/sc_mm_40"
                    android:paddingRight="@dimen/gap_right"
                    android:id="@+id/iv_show_pas"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pwd_eye_icon"
                    android:layout_height="match_parent" />
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>
