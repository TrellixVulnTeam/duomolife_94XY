<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/border_bottom_line"
        android:paddingBottom="@dimen/sc_mm_2"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_duomolife_indent_header"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88">
        <include layout="@layout/layout_slid_check_blue_un_black"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray_f"
        android:layout_height="@dimen/dimen_5_dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_indent_container"
        android:scrollbars="none"/>
</LinearLayout>
