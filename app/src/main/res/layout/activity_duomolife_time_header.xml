<?xml version="1.0" encoding="utf-8"?>
<com.amkj.dmsh.views.autoviews.AutoToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80px"
    android:background="@android:color/white"
    app:contentInsetStart="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:paddingLeft="@dimen/gap_left"
            android:paddingRight="26px"
            android:layout_width="wrap_content"
            android:id="@+id/tv_show_time_back"
            android:clickable="true"
            android:textSize="32px"
            android:textColor="@color/home_text_color"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/common_back_btn_nor"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="32px"
            android:layout_weight="1"
            android:textColor="@color/home_text_color"
            android:gravity="center"
            android:text="限时特惠"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:paddingRight="26px"
            android:paddingLeft="@dimen/gap_left"
            android:gravity="center_vertical"
            android:textSize="32px"
            android:textColor="@color/selector_mine_warm_time"
            android:clickable="true"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.amkj.dmsh.views.autoviews.AutoToolbar>