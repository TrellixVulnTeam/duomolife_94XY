<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_search_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_indent_search_tip"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_bottom_line"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/gap_left"
            android:text="搜索历史"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/sc_mm_28" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_indent_history_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_300"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_indent_search_history_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_key_clear"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sc_mm_60"
            android:layout_gravity="center"

            android:drawableLeft="@drawable/srash_s_btn_nor"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="清除搜索历史"
            android:textColor="#5faeff"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>
</LinearLayout>