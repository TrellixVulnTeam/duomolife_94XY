<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_duomolife_indent_header"/>
    <com.amkj.dmsh.views.flycoTablayout.SlidingTabLayout
        android:id="@+id/stl_integral_indent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88"
        app:tl_indicator_height="@dimen/dimen_2dp"
        app:tl_indicator_corner_radius="@dimen/dimen_1dp"
        app:tl_textsize="14sp"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width_equal_title="true"
        app:tl_indicator_color="@color/text_login_blue_z"
        app:tl_textSelectColor="@color/text_login_blue_z"
        app:tl_textUnselectColor="@color/text_login_gray_s"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray_f"
        android:layout_height="@dimen/dimen_5_dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_integral_indent_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>