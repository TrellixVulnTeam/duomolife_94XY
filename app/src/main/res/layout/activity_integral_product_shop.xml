<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_domolife_header"/>
    <com.amkj.dmsh.views.tablayout.SlidingTabLayout
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/sc_mm_550"
        android:layout_height="@dimen/sc_mm_98"
        android:id="@+id/std_integral_product"
        android:background="@color/white"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_indicator_height="@dimen/dimen_2dp"
        tl:tl_indicator_corner_radius="@dimen/dimen_1dp"
        tl:tl_indicator_color="@color/text_black_t"
        tl:tl_textUnselectColor="@color/text_login_gray_s"
        tl:tl_textSelectColor="@color/text_black_t"
        tl:tl_textsize="15sp"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_style="NORMAL"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray_f"
        android:layout_height="@dimen/dimen_5_dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/vp_integral_product"
        android:layout_height="match_parent"/>
</LinearLayout>