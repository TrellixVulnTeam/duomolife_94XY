<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_launch_wel_page"
        android:layout_width="match_parent"
        android:background="@drawable/launch_list"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/sc_mm_40"
        android:id="@+id/fl_skip"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_launch_wel_skip_main"
            android:layout_width="@dimen/sc_mm_120"
            android:layout_height="@dimen/sc_mm_50"
            android:background="@drawable/border_rect_four_gray_wel_skip"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="@dimen/sc_mm_10"
            android:paddingRight="@dimen/sc_mm_10"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />
        <ProgressBar
            android:id="@+id/reg_req_code_gif_skip"
            android:layout_width="@dimen/sc_mm_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sc_mm_12"
            android:layout_marginBottom="@dimen/sc_mm_12"
            android:layout_marginLeft="@dimen/sc_mm_17"
            android:layout_marginRight="@dimen/sc_mm_17"
            android:layout_height="@dimen/sc_mm_40"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/anim_loading_flower_rotate"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
