<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_domolife_header" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/item_divider_gray_f_one_px"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.amkj.dmsh.views.flycoTablayout.SlidingTabLayout
            android:visibility="gone"
            android:id="@+id/stl_direct_logistics_details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sc_mm_80"
            android:layout_gravity="center"
            app:tl_indicator_color="@color/transparent"
            app:tl_indicator_corner_radius="@dimen/dimen_1dp"
            app:tl_indicator_gravity="BOTTOM"
            app:tl_indicator_width="@dimen/sc_mm_75"
            app:tl_textSelectColor="@color/text_login_blue_z"
            app:tl_textUnselectColor="@color/text_black_t"
            app:tl_textsize="@dimen/sc_mm_28"
            tl:tl_indicator_width_equal_title="true" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_direct_logistics_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
