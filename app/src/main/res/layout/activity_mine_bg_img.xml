<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_f"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="480px"
        android:scaleType="centerCrop"
        android:id="@+id/iv_mine_bg_img"
        app:layout_auto_basewidth = "height"/>
    <TextView
        android:layout_marginTop="100px"
        android:layout_width="678px"
        android:layout_height="84px"
        android:gravity="center"
        android:textColor="@color/text_gray_hint_n"
        android:id="@+id/tv_mine_bg_cover"
        android:textSize="32px"
        android:clickable="true"
        android:text="更换封面"
        android:background="@drawable/border_circle_four_gray_bg_white"/>
    <TextView
        android:layout_marginTop="30px"
        android:layout_width="678px"
        android:layout_height="84px"
        android:gravity="center"
        android:textColor="@color/text_gray_hint_n"
        android:textSize="32px"
        android:id="@+id/tv_mine_bg_cancel"
        android:text="取消"
        android:clickable="true"
        android:background="@drawable/border_circle_four_gray_bg_white"/>
</LinearLayout>