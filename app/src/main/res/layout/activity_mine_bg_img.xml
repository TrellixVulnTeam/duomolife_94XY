<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_f"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_480"
        android:scaleType="centerCrop"
        android:id="@+id/iv_mine_bg_img"
        />
    <TextView
        android:layout_marginTop="@dimen/sc_mm_100"
        android:layout_width="@dimen/sc_mm_678"
        android:layout_height="@dimen/sc_mm_84"
        android:gravity="center"
        android:textColor="@color/text_gray_hint_n"
        android:id="@+id/tv_mine_bg_cover"
        android:textSize="@dimen/sc_mm_32"

        android:text="更换封面"
        android:background="@drawable/border_circle_four_gray_bg_white"/>
    <TextView
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_width="@dimen/sc_mm_678"
        android:layout_height="@dimen/sc_mm_84"
        android:gravity="center"
        android:textColor="@color/text_gray_hint_n"
        android:textSize="@dimen/sc_mm_32"
        android:id="@+id/tv_mine_bg_cancel"
        android:text="取消"

        android:background="@drawable/border_circle_four_gray_bg_white"/>
</LinearLayout>