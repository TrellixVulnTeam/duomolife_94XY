<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_ll_0_5_dp"
    android:showDividers="middle"
    android:orientation="vertical">
    <include layout="@layout/activity_domolife_header"/>
    <com.amkj.dmsh.views.tablayout.SlidingTabLayout
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/std_mine_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88"
        android:layout_gravity="center"
        android:background="@color/white"
        tl:tl_indicator_color="@color/text_black_t"
        tl:tl_indicator_corner_radius="@dimen/dimen_1dp"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_height="@dimen/dimen_2dp"
        tl:tl_indicator_style="NORMAL"
        tl:tl_tab_space_equal="true"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_textSelectColor="@color/text_black_t"
        tl:tl_textUnselectColor="@color/text_black_t"
        tl:tl_textsize="14sp" />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/vp_mine_coupon"
        android:layout_height="match_parent"/>
</LinearLayout>