<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_title_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <include layout="@layout/activity_duomolife_blue_header" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:orientation="vertical">


            <include  layout="@layout/layout_mine_wel_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="86px"
                android:orientation="vertical"
                android:paddingLeft="119px"
                android:paddingRight="119px">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_account_pas_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/edit_login_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom_line"
                            android:gravity="center_vertical"
                            android:hint="手机号"
                            android:singleLine="true"
                            android:inputType="phone|number"
                            android:maxLength="11"
                            android:minHeight="100px"
                            android:textColor="@color/login_text_color"
                            android:textColorHint="@color/text_gray_hint_n"
                            android:textSize="28px" />

                        <EditText
                            android:id="@+id/edit_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom_line"
                            android:hint="密码"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:minHeight="100px"
                            android:textColor="@color/login_text_color"
                            android:textColorHint="@color/text_gray_hint_n"
                            android:textSize="28px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mobile_num_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_login_code_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/border_bottom_line"
                            android:gravity="center_vertical"
                            android:hint="手机号"
                            android:singleLine="true"
                            android:inputType="number|phone"
                            android:maxLength="11"
                            android:minHeight="100px"
                            android:textColor="@color/home_text_color"
                            android:textColorHint="@color/text_gray_hint_n"
                            android:textSize="28px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom_line"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_login_get_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_line"
                                android:gravity="center_vertical"
                                android:hint="验证码"
                                android:singleLine="true"
                                android:inputType="number|phone"
                                android:maxLength="6"
                                android:minHeight="100px"
                                android:textColor="@color/home_text_color"
                                android:textColorHint="@color/text_gray_hint_n"
                                android:textSize="28px" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_login_send_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="100px"
                                    android:layout_gravity="center"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:paddingRight="@dimen/gap_right"
                                    android:textColor="@color/selector_font_blue_hint_gray"
                                    android:textSize="24px" />

                                <ProgressBar
                                    android:id="@+id/reg_login_code_gif_view"
                                    android:layout_width="60px"
                                    android:layout_height="60px"
                                    android:layout_gravity="center"
                                    android:indeterminateBehavior="repeat"
                                    android:indeterminateDrawable="@drawable/anim_loading_flower_rotate"
                                    android:paddingRight="@dimen/gap_right"
                                    android:visibility="gone" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ming_login_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:paddingBottom="18px"
                        android:paddingRight="18px"
                        android:paddingTop="28px"
                        android:text="注册"
                        android:textColor="@color/textColor_blue"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/tv_ming_login_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingBottom="18px"
                        android:paddingLeft="18px"
                        android:paddingTop="28px"
                        android:text="忘记密码?"
                        android:textColor="@color/textColor_blue"
                        android:textSize="30px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_mine_Login"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_marginTop="79px"
                    android:background="@drawable/login_bt_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="登 录"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="32px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tv_mine_change_login_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22px"
                android:gravity="center"
                android:padding="10px"
                android:clickable="true"
                android:text="验证码登录"
                android:textColor="@color/text_login_blue_z"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="93px"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="120px"
                android:paddingRight="120px">

                <View
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_0p5_dp"
                    android:layout_weight="1"
                    android:background="@color/text_gray_hint_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="38px"
                    android:paddingRight="38px"
                    android:text="OR"
                    android:textColor="@color/login_text_color"
                    android:textSize="24px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_0p5_dp"
                    android:layout_weight="1"
                    android:background="@color/text_gray_hint_n" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130px"
                android:layout_marginRight="130px"
                android:layout_marginTop="74px"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_layout_weChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rImg_login_way_weChat"
                        android:layout_width="78px"
                        android:layout_height="62px"
                        android:src="@drawable/login_wechat"
                        app:layout_auto_basewidth="height" />

                    <TextView
                        android:id="@+id/tv_login_way_weChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:clickable="true"
                        android:text="微信"
                        android:textColor="@color/login_text_color"
                        android:textSize="26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layout_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rImg_login_way_qq"
                        android:layout_width="63px"
                        android:layout_height="65px"
                        android:src="@drawable/login_qq"
                        app:layout_auto_basewidth="height" />

                    <TextView
                        android:id="@+id/tv_login_way_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:clickable="true"
                        android:text="QQ"
                        android:textColor="@color/login_text_color"
                        android:textSize="26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layout_weiBo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rImg_login_way_weiBo"
                        android:layout_width="79px"
                        android:layout_height="62px"
                        android:src="@drawable/login_weibo"
                        app:layout_auto_basewidth="height" />

                    <TextView
                        android:id="@+id/tv_login_way_weiBo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:clickable="true"
                        android:text="微博"
                        android:textColor="@color/login_text_color"
                        android:textSize="26px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
