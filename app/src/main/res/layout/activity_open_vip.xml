<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shap_vip_ll_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_domolife_header" />

    <LinearLayout
        android:id="@+id/ll_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/sc_mm_22"
            android:layout_marginTop="@dimen/sc_mm_22"
            android:layout_marginRight="@dimen/sc_mm_22"
            android:layout_weight="1"
            android:background="@drawable/border_rect_10dp_bg_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_30"
                    android:layout_marginTop="@dimen/sc_mm_44"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_vip_logo"
                        android:layout_width="@dimen/sc_mm_42"
                        android:layout_height="@dimen/sc_mm_40"
                        android:src="@drawable/vip_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_15"
                        android:text="@string/domolife_vip"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_38"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_28"
                    android:text="尊享特权"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sc_mm_24"
                    android:nestedScrollingEnabled="false" />

                <LinearLayout
                    android:id="@+id/ll_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_44"
                        android:layout_marginTop="@dimen/sc_mm_60"
                        android:layout_marginRight="@dimen/sc_mm_49"
                        android:text="尊享特惠"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_44"
                        android:layout_marginTop="@dimen/sc_mm_16"
                        android:text="购买会员卡，可额外获赠以下礼品"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_24" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_gift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_32"
                        android:layout_marginTop="@dimen/sc_mm_24"
                        android:layout_marginRight="@dimen/sc_mm_32"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_30"
                    android:layout_marginRight="@dimen/sc_mm_49"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尊享特惠"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28"
                        android:textStyle="bold" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/ll_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_24"
                        android:orientation="horizontal"
                        app:dividerDrawableHorizontal="@drawable/item_divider_five_white"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        app:showDividerHorizontal="middle" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sc_mm_1"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_17"
                    android:layout_marginRight="@dimen/sc_mm_49"
                    android:background="@color/text_color_e_s" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_24"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参考价"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28" />

                    <TextView
                        android:id="@+id/tv_market_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_46"
                        android:text="@string/defaul"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28" />

                    <TextView
                        android:id="@+id/tv_discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_28"
                        android:layout_marginTop="@dimen/sc_mm_5"
                        android:layout_marginBottom="@dimen/sc_mm_5"
                        android:background="@drawable/shap_vip_price_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/sc_mm_16"
                        android:paddingRight="@dimen/sc_mm_16"
                        android:text="@string/defaul"
                        android:textColor="#ff0000"
                        android:textSize="@dimen/sc_mm_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_39"
                    android:layout_marginRight="@dimen/sc_mm_49"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="惠后价"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_46"
                        android:text="@string/defaul"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_40"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_quarterly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sc_mm_28"
                        android:layout_marginTop="@dimen/sc_mm_5"
                        android:layout_marginBottom="@dimen/sc_mm_5"
                        android:gravity="center"
                        android:paddingLeft="@dimen/sc_mm_16"
                        android:paddingRight="@dimen/sc_mm_16"
                        android:text="@string/defaul"
                        android:textColor="@color/text_login_gray_s"
                        android:textSize="@dimen/sc_mm_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sc_mm_1"
                    android:layout_marginLeft="@dimen/sc_mm_44"
                    android:layout_marginTop="@dimen/sc_mm_31"
                    android:layout_marginRight="@dimen/sc_mm_49"
                    android:background="@color/text_color_e_s" />

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_power"
                    android:layout_marginLeft="@dimen/sc_mm_46"
                    android:layout_marginTop="@dimen/sc_mm_17"
                    android:layout_marginRight="@dimen/sc_mm_49"
                    android:layout_marginBottom="@dimen/sc_mm_50"
                    android:text="友情提示：会员服务购买后不支持退款"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="@dimen/sc_mm_24" />

                <include layout="@layout/layout_direct_pay_way_item" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/checkbox_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sc_mm_7"
            android:button="@null"
            android:drawablePadding="@dimen/sc_mm_15"
            android:gravity="center_vertical"
            android:padding="@dimen/sc_mm_20"
            android:text="购买即视为同意《多么生活会员用户协议》"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_24" />

        <LinearLayout
            android:id="@+id/ll_open_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_100"
            android:background="#2a3364"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/sc_mm_42"
                android:layout_height="@dimen/sc_mm_40"
                android:src="@drawable/vip_logo" />

            <TextView
                android:id="@+id/tv_open_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_15"
                android:text="立即开通¥149/年"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_32"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>