<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/activity_domolife_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray_f">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/smart_communal_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cube_ptr:srlEnableOverScrollBounce="false">

            <include layout="@layout/layout_refresh_header_gif" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_goods"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sc_mm_160"
                        android:background="@color/white"
                        android:padding="@dimen/sc_mm_20">

                        <ImageView
                            android:id="@+id/iv_cover"
                            android:layout_width="@dimen/sc_mm_120"
                            android:layout_height="@dimen/sc_mm_120"
                            android:src="@drawable/load_loading_image" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sc_mm_24"
                            android:layout_toRightOf="@+id/iv_cover"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/defaul"
                            android:textColor="@color/text_black_t"
                            android:textSize="@dimen/sc_mm_26" />

                        <ImageView
                            android:id="@+id/iv_add_car"
                            android:layout_width="@dimen/sc_mm_42"
                            android:layout_height="@dimen/sc_mm_53"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/sc_mm_10"
                            android:src="@drawable/join_cart" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/communal_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/sc_mm_20"
                        android:scrollbars="none" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <include layout="@layout/layout_communal_floating" />
    </FrameLayout>
</LinearLayout>