<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_domolife_header"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0px">
        <include layout="@layout/layout_communal_smart_refresh_recycler_float_loading"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_98"
        android:background="@drawable/border_top_line"
        android:divider="@drawable/divider_ll_0_5_dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.amkj.dmsh.views.DrawableCenterTextView
            android:id="@+id/tv_quality_all_gp_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableLeft="@drawable/ql_red_g_icon"
            android:drawablePadding="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:text="全部拼团"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32" />

        <com.amkj.dmsh.views.DrawableCenterTextView
            android:id="@+id/tv_quality_join_gp_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableLeft="@drawable/my_group_icon"
            android:drawablePadding="@dimen/dimen_10_dp"
            android:gravity="center_vertical"
            android:text="我的拼团"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32" />
    </LinearLayout>
</LinearLayout>