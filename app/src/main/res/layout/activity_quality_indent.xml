<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_domolife_header" />

    <com.amkj.dmsh.views.flycoTablayout.SlidingTabLayout
        android:id="@+id/search_sliding_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_78"
        android:background="@drawable/border_bottom_line"
        android:paddingLeft="@dimen/sc_mm_78"
        android:paddingRight="@dimen/sc_mm_78"
        app:tl_indicator_color="@color/text_login_blue_z"
        app:tl_indicator_corner_radius="@dimen/dimen_1dp"
        app:tl_indicator_height="@dimen/dimen_2dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/text_login_blue_z"
        app:tl_textUnselectColor="@color/text_login_gray_s"
        app:tl_textsize="14sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_dm_indent_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>