<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_ql_cart_share_header" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/smart_communal_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cube_ptr:srlEnableOverScrollBounce="false">

            <include layout="@layout/layout_refresh_header_gif" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_new_user_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/first_user_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/sc_mm_33"
                            android:src="@drawable/first_user_order" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sc_mm_60"
                            android:layout_marginTop="@dimen/sc_mm_20"
                            android:layout_marginRight="@dimen/sc_mm_60"
                            android:background="@drawable/border_rect_10dp_bg_white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/sc_mm_24"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="@dimen/sc_mm_100"
                                        android:layout_height="@dimen/sc_mm_100">

                                        <ImageView
                                            android:layout_width="@dimen/sc_mm_100"
                                            android:layout_height="@dimen/sc_mm_100"
                                            android:src="@drawable/first_user_shopcar" />

                                        <TextView
                                            android:id="@+id/tv_first_amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="@dimen/sc_mm_6"
                                            android:text="@string/defaul"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/sc_mm_24" />
                                    </RelativeLayout>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/sc_mm_10"
                                        android:text="购买商品"
                                        android:textColor="@color/text_black_t"
                                        android:textSize="@dimen/sc_mm_24" />
                                </LinearLayout>


                                <ImageView
                                    android:layout_width="@dimen/sc_mm_170"
                                    android:layout_height="@dimen/sc_mm_57"
                                    android:layout_margin="@dimen/sc_mm_50"
                                    android:src="@drawable/first_user_settle" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/sc_mm_24"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/sc_mm_100"
                                        android:layout_height="@dimen/sc_mm_100"
                                        android:src="@drawable/first_user_gift" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/sc_mm_10"
                                        android:text="0元加购"
                                        android:textColor="@color/text_black_t"
                                        android:textSize="@dimen/sc_mm_24" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_first_condition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/sc_mm_20"
                                android:text="新用户首单实付满指定金额，结算时可免费加购对应礼品"
                                android:textColor="@color/text_black_t"
                                android:textSize="@dimen/sc_mm_22" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/sc_mm_30"
                            android:text="- 首单0元购 -"
                            android:textColor="@color/text_black_t"
                            android:textSize="@dimen/sc_mm_32"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_first_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <include layout="@layout/layout_communal_recycler" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <include layout="@layout/layout_communal_floating" />
    </FrameLayout>
</LinearLayout>