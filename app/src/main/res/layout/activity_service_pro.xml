<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="186px"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15px"
    android:paddingLeft="24px"
    android:paddingRight="30px"
    android:paddingTop="15px">

    <ImageView
        android:id="@+id/iv_service_pro_pic"
        android:layout_width="141px"
        android:layout_height="141px"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/rel_service_pro"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/tv_service_pro_name"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_black_t"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_service_pro_price"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/sel_font_b_gray_un_red"
            android:textSize="30px" />
    </RelativeLayout>
</LinearLayout>