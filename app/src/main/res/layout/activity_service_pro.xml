<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_186"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/sc_mm_15"
    android:paddingLeft="@dimen/sc_mm_24"
    android:paddingRight="@dimen/sc_mm_30"
    android:paddingTop="@dimen/sc_mm_15">

    <ImageView
        android:id="@+id/iv_service_pro_pic"
        android:layout_width="@dimen/sc_mm_141"
        android:layout_height="@dimen/sc_mm_141"
        android:scaleType="centerCrop"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/rel_service_pro"
        android:paddingLeft="@dimen/sc_mm_30">

        <TextView
            android:id="@+id/tv_service_pro_name"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_service_pro_price"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_22"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="@color/sel_font_b_gray_un_red"
            android:textSize="@dimen/sc_mm_30" />
    </RelativeLayout>
</LinearLayout>