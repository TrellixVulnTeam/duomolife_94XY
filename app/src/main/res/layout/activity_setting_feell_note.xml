<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_domolife_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="wrap_content">
        <emojicon.EmojiconEditText
            android:paddingLeft="24px"
            android:paddingRight="@dimen/gap_right"
            android:gravity="top"
            android:paddingTop="16px"
            android:textColor="@color/home_text_color"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:id="@+id/edit_feel"
            android:layout_width="match_parent"
            android:background="@color/gray_bg"
            android:layout_height="wrap_content"
            android:minHeight="160px"
            app:emojiconSize="40px"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20px"
            android:text="30"
            android:textColor="@color/text_black_t"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_feel_count"
            android:layout_alignBottom="@id/edit_feel"
            android:layout_marginRight="24px"
            android:paddingBottom="10px"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>