<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include layout="@layout/activity_domolife_header"/>
    </RelativeLayout>

    <android.support.text.emoji.widget.EmojiEditText
        android:id="@+id/edit_personal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/personal_name_hint"
        android:maxLength="10"
        android:minHeight="@dimen/sc_mm_104"
        android:paddingLeft="@dimen/sc_mm_24"
        android:paddingRight="@dimen/gap_right"
        android:singleLine="true"
        android:textColor="@color/home_text_color"
        android:textColorHint="@color/text_hint_gray_ae"
        android:textSize="@dimen/sc_mm_32"
        app:emojiconSize="20sp"/>
</LinearLayout>