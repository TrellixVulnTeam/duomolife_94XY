<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/activity_domolife_header"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_time_product_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false">

        <include layout="@layout/layout_refresh_header_gif"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsv_time_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/banner_shop_time_details"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sc_mm_750"
                        android:background="@drawable/border_bottom_line"/>

                    <RelativeLayout
                        android:id="@+id/rel_promotion_product_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sc_mm_80"
                        android:background="@color/text_light_pink_da"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_promotion_product_time_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="中奖倒计时"
                            android:textColor="@color/text_black_t"
                            android:textSize="@dimen/sc_mm_28"/>

                        <cn.iwgang.countdownview.CountdownView
                            android:id="@+id/ct_promotion_product_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/sc_mm_17"
                            android:layout_toRightOf="@id/tv_promotion_product_time_status"
                            app:isHideTimeBackground="false"
                            app:isShowDay="true"
                            app:isShowHour="true"
                            app:isShowMillisecond="false"
                            app:isShowMinute="true"
                            app:isShowSecond="true"
                            app:suffixDay="天"
                            app:suffixGravity="center"
                            app:suffixHour=":"
                            app:suffixMinute=":"
                            app:suffixTextColor="@color/text_black_t"
                            app:suffixTextSize="@dimen/sc_mm_28"
                            app:timeTextColor="@color/white"
                            app:timeTextSize="@dimen/sc_mm_28"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_left"
                        android:layout_marginRight="@dimen/gap_right"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/sc_mm_28">

                        <TextView
                            android:id="@+id/tv_shop_time_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sc_mm_24"
                            android:lineSpacingExtra="@dimen/dimen_6_dp"
                            android:textColor="@color/text_black_t"
                            android:textSize="@dimen/sc_mm_28"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sc_mm_24"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shop_time_product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:textColor="@color/text_normal_red"
                                android:textSize="@dimen/sc_mm_34"/>

                            <TextView
                                android:id="@+id/tv_shop_time_product_mk_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sc_mm_40"
                                android:layout_weight="1"
                                android:text="非团购价300"
                                android:textColor="@color/text_gray_hint_n"
                                android:textSize="@dimen/sc_mm_24"/>

                            <TextView
                                android:id="@+id/tv_product_details_join_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sc_mm_16"
                                android:background="@drawable/border_circle_4_yellow"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/sc_mm_15"
                                android:paddingTop="@dimen/sc_mm_4"
                                android:paddingRight="@dimen/sc_mm_15"
                                android:paddingBottom="@dimen/sc_mm_4"
                                android:singleLine="true"
                                android:text="30人已参团"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sc_mm_22"/>
                        </LinearLayout>
                    </LinearLayout>

                    <include layout="@layout/layout_communal_recycler_wrap"/>

                    <com.amkj.dmsh.views.flycoTablayout.CommonTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
                                                                        android:id="@+id/ctb_promotion_product"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="@dimen/sc_mm_110"
                                                                        android:background="@drawable/border_top_5dp_gray"
                                                                        tl:tl_iconMargin="@dimen/dimen_1dp"
                                                                        tl:tl_indicator_color="@color/text_normal_red"
                                                                        tl:tl_indicator_corner_radius="@dimen/sc_mm_1"
                                                                        tl:tl_indicator_gravity="BOTTOM"
                                                                        tl:tl_indicator_height="@dimen/dimen_2dp"
                                                                        tl:tl_indicator_margin_bottom="@dimen/dp_10"
                                                                        tl:tl_indicator_width="@dimen/dimen_70dp"
                                                                        tl:tl_tab_space_equal="true"
                                                                        tl:tl_textSelectColor="@color/text_normal_red"
                                                                        tl:tl_textUnselectColor="@color/text_black_t"
                                                                        tl:tl_textsize="15sp"/>

                    <FrameLayout
                        android:id="@+id/fl_promotion_product_details_contain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/sc_mm_500"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <include layout="@layout/layout_communal_floating"/>
        </FrameLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <include layout="@layout/layout_time_product_bottom"/>
</LinearLayout>