<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_403"
        >
        <ImageView
            android:id="@+id/iv_com_art_cover"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_com_art_hot_tag"
            android:layout_marginLeft="@dimen/sc_mm_22"
            android:layout_marginTop="@dimen/sc_mm_24"
            android:gravity="center"
            android:paddingLeft="@dimen/sc_mm_16"
            android:paddingRight="@dimen/sc_mm_20"
            android:paddingTop="@dimen/sc_mm_12"
            android:paddingBottom="@dimen/sc_mm_12"

            android:drawablePadding="@dimen/dimen_3_dp"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/tag_w_icon_nor"
            android:background="@drawable/hot_border"
            android:text="下厨吧"
            android:textSize="@dimen/sc_mm_20"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:drawablePadding="@dimen/dimen_9dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/sc_mm_22"
            android:drawableLeft="@drawable/art_eye_icon"
            android:id="@+id/tv_com_art_view_count"
            android:paddingLeft="@dimen/sc_mm_21"
            android:paddingRight="@dimen/sc_mm_20"
            android:paddingTop="@dimen/sc_mm_10"
            android:paddingBottom="@dimen/sc_mm_10"
            android:layout_marginBottom="@dimen/sc_mm_20"
            android:layout_marginRight="@dimen/sc_mm_20"
            android:minHeight="@dimen/sc_mm_40"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sc_mm_20"
        android:paddingLeft="@dimen/sc_mm_20"
        android:paddingRight="@dimen/sc_mm_20"
        android:paddingBottom="@dimen/sc_mm_20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_com_art_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black_t"
            android:gravity="center"
            android:textSize="@dimen/sc_mm_30" />
        <TextView
            android:id="@+id/tv_com_art_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_login_gray_s"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/sc_mm_26"
            android:lineSpacingExtra="@dimen/dimen_8_dp"
            android:textSize="@dimen/sc_mm_26" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:layout_height="match_parent">
            <include layout="@layout/layout_com_art_bottom"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>