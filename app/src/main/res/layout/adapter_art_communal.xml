<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="403px"
        app:layout_auto_basewidth = "height">
        <ImageView
            android:id="@+id/iv_com_art_cover"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_com_art_hot_tag"
            android:layout_marginLeft="22px"
            android:layout_marginTop="24px"
            android:gravity="center"
            android:paddingLeft="16px"
            android:paddingRight="20px"
            android:paddingTop="12px"
            android:paddingBottom="12px"
            android:clickable="true"
            android:drawablePadding="@dimen/dimen_3_dp"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/tag_w_icon_nor"
            android:background="@drawable/hot_border"
            android:text="下厨吧"
            android:textSize="20px"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:drawablePadding="@dimen/dimen_9dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="22px"
            android:drawableLeft="@drawable/art_eye_icon"
            android:id="@+id/tv_com_art_view_count"
            android:paddingLeft="21px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_marginBottom="20px"
            android:layout_marginRight="20px"
            android:minHeight="40px"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingBottom="20px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_com_art_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black_t"
            android:gravity="center"
            android:textSize="30px" />
        <TextView
            android:id="@+id/tv_com_art_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_login_gray_s"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="26px"
            android:lineSpacingExtra="@dimen/dimen_8_dp"
            android:textSize="26px" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:layout_height="match_parent">
            <include layout="@layout/layout_com_art_bottom"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>