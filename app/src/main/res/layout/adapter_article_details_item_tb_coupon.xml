<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_layout_tb_coupon">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_tb_coupon"
        android:layout_marginBottom="20px"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/coupon_taobao_bg"
            android:layout_height="134px"
            android:id="@+id/iv_tb_coupon_bg"
            android:layout_marginLeft="@dimen/gap_left"
            android:layout_marginRight="@dimen/gap_right"
            app:layout_auto_basewidth = "height"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="32px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginRight="@dimen/gap_right"
            android:id="@+id/tv_tb_coupon_price"
            android:gravity="bottom"
            android:minHeight="75px"
            android:text="￥30优惠券"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="40px"
        android:textColor="@color/text_normal_red"
        android:textSize="28px"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:id="@+id/tv_last_tb_coupon_hint"
        android:layout_below="@id/iv_tb_coupon_bg"
        android:gravity="center"
        android:text="注：此款商品需先领券后，才可享受优惠"
        android:layout_height="wrap_content" />
</LinearLayout>