<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_details_goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_details_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_12"
        android:layout_marginRight="@dimen/sc_mm_12"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sc_mm_5"
        android:lines="2"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_22" />

    <TextView
        android:id="@+id/tv_details_goods_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:layout_marginLeft="@dimen/sc_mm_12"
        android:layout_marginRight="@dimen/sc_mm_12"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_28" />
</LinearLayout>