<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_details_goods_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/load_loading_image"
            android:scaleType="centerCrop"/>

        <include layout="@layout/layout_communal_pro_out_img"/>
    </RelativeLayout>

    <com.google.android.flexbox.FlexboxLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fbl_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:paddingLeft="@dimen/sc_mm_12"
        app:dividerDrawable="@drawable/item_divider_img_red"
        app:flexWrap="wrap"
        app:showDivider="middle"/>

    <TextView
        android:id="@+id/tv_details_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_12"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:layout_marginRight="@dimen/sc_mm_12"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sc_mm_5"
        android:lines="2"
        android:textColor="@color/text_black_t2"
        android:textSize="@dimen/sc_mm_26"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/sc_mm_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_details_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_12"
            android:layout_marginRight="@dimen/sc_mm_12"
            android:layout_marginBottom="@dimen/sc_mm_20"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_normal_red"
            android:textSize="@dimen/sc_mm_30"/>

        <TextView
            android:id="@+id/tv_details_goods_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_details_goods_price"
            android:layout_marginRight="@dimen/sc_mm_12"
            android:layout_toRightOf="@id/tv_details_goods_price"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_gray_hint_n"
            android:textSize="@dimen/sc_mm_22"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>