<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/sc_mm_46"
    android:layout_marginRight="@dimen/sc_mm_46"
    android:layout_height="@dimen/sc_mm_130"
    android:layout_marginBottom="@dimen/sc_mm_11"
    android:background="@drawable/result_coupon_bg">

    <TextView
        android:id="@+id/tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/sc_mm_46"
        android:layout_marginBottom="@dimen/sc_mm_32"
        android:text="Â¥"
        android:textColor="@color/dialog_red"
        android:textSize="@dimen/sc_mm_34"/>

    <TextView
        android:id="@+id/tv_mount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sc_mm_32"
        android:layout_toRightOf="@+id/tv_rmb"
        android:textColor="@color/dialog_red"
        android:textSize="@dimen/sc_mm_86"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_condition"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_toRightOf="@+id/tv_mount"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/coupon_name_color"
        android:textSize="@dimen/sc_mm_24"/>

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_marginTop="@dimen/sc_mm_16"
        android:layout_marginBottom="@dimen/sc_mm_34"
        android:layout_toRightOf="@+id/tv_mount"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_22"/>
</RelativeLayout>