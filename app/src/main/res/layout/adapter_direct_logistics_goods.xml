<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="24px">
        <ImageView
            android:id="@+id/iv_logistic_indent_pro"
            android:layout_width="98px"
            android:layout_height="98px"
            android:scaleType="centerCrop"
            app:layout_auto_basewidth = "height"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px">

            <TextView
                android:id="@+id/tv_logistic_indent_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_text_color"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_logistics_indent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_logistic_indent_pro_name"
                android:layout_marginTop="14px"
                android:textColor="@color/home_text_color"
                android:textSize="24px" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
