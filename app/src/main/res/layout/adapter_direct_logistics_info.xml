<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="39px"
    android:paddingRight="@dimen/gap_right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_direct_logistic_icon"
            android:layout_width="38px"
            android:layout_marginTop="2px"
            android:layout_height="38px"
            android:src="@drawable/sel_logis_icon"
            android:scaleType="fitCenter"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_direct_logistic_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2px"
            android:background="@color/text_gray_c" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="5px">

        <TextView
            android:id="@+id/tv_direct_logist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/dimen_4dp"
            android:text="感谢你使用多么生活"
            android:textColor="@color/sel_indent_blue_z_gray_n"
            android:textSize="24px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_direct_logist_info"
            android:id="@+id/tv_direct_logist_info_time"
            android:layout_marginTop="28px"
            android:textSize="24px"
            android:textColor="@color/sel_indent_blue_z_gray_n"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
