<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/sc_mm_20"
    android:paddingTop="@dimen/sc_mm_12"
    android:background="@color/product_bg_list"
    android:paddingBottom="@dimen/sc_mm_18"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_direct_indent_pro"
        android:layout_width="@dimen/sc_mm_100"
        android:layout_height="@dimen/sc_mm_100"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_24"
        android:layout_marginRight="@dimen/sc_mm_36"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_direct_indent_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_2dp"
            android:maxLines="2"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24" />

        <TextView
            android:id="@+id/tv_direct_indent_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_direct_indent_pro_name"
            android:layout_marginTop="@dimen/sc_mm_18"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_30" />

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_direct_indent_pro_price"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/sc_mm_18"
            android:layout_marginTop="@dimen/sc_mm_18"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tag_apply_appeal"
        android:layout_width="@dimen/sc_mm_108"
        android:layout_height="@dimen/sc_mm_48"
        android:layout_marginRight="@dimen/sc_mm_24"
        android:background="@drawable/border_cir_three_enable_blue_gray"

        android:gravity="center"
        android:text="申诉"
        android:textSize="@dimen/sc_mm_24"
        android:textColor="@color/text_black_t"
        android:visibility="gone" />
</LinearLayout>