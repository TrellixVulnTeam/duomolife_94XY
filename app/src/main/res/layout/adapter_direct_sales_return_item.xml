<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20px"
    android:paddingTop="12px"
    android:background="@color/product_bg_list"
    android:paddingBottom="18px"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_direct_indent_pro"
        android:layout_width="100px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth = "height"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="36px"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_direct_indent_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_2dp"
            android:maxLines="2"
            android:textColor="@color/text_black_t"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_direct_indent_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_direct_indent_pro_name"
            android:layout_marginTop="18px"
            android:textColor="@color/text_black_t"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_direct_indent_pro_price"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18px"
            android:layout_marginTop="18px"
            android:textColor="@color/text_black_t"
            android:textSize="24px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tag_apply_appeal"
        android:layout_width="108px"
        android:layout_height="48px"
        android:layout_marginRight="24px"
        android:background="@drawable/border_cir_three_enable_blue_gray"
        android:clickable="true"
        android:gravity="center"
        android:text="申诉"
        android:textSize="24px"
        android:textColor="@color/text_black_t"
        android:visibility="gone" />
</LinearLayout>