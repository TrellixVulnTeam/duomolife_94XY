<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="18px"
    android:paddingBottom="18px"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="200px"
        android:gravity="center"
        android:id="@+id/rel_dnl_hor_layout"
        android:layout_height="200px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_ll_0_5_dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="查看全部"
                android:textSize="26px"
                android:paddingBottom="7px"
                android:textColor="@color/text_login_blue_z"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="10px"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="See more"
                android:textSize="24px"
                android:textColor="@color/text_gray_hint_n"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200px"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_height="wrap_content">
        <TextView
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingLeft="4px"
            android:textColor="@color/home_text_color"
            android:textSize="24px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:gravity="center_vertical"
            android:paddingLeft="4px"
            android:textColor="#ff6d6d"
            android:textSize="24px" />
    </LinearLayout>
</LinearLayout>