<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:paddingTop="18px"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingBottom="18px"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_hor_welfare_img"
        android:layout_width="200px"
        android:layout_height="200px"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/img_duomolife_gv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_1dp"
            android:scaleType="fitCenter" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="200px"
        android:orientation="vertical"
        android:id="@+id/ll_hor_welfare_text"
        android:layout_below="@id/rel_hor_welfare_img"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_duomolife_gv_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingLeft="4px"
            android:text="可折叠菜谱书架"
            android:textColor="@color/home_text_color"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_duomolife_gv_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:gravity="center_vertical"
            android:paddingLeft="4px"
            android:text="$399.00"
            android:textColor="#ff6d6d"
            android:textSize="24px" />
    </LinearLayout>
</RelativeLayout>
