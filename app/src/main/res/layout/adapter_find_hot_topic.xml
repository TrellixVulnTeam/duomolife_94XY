<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270px"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="23px"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="270px"
        android:layout_gravity="center_vertical"
        android:layout_height="190px"
        app:layout_auto_basewidth = "height">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/iv_find_hot_topic"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/cir_solid_translucence"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="28px"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tv_find_hot_topic_name"
                android:lineSpacingExtra="@dimen/dimen_6_dp"
                android:text="#推荐一件必买商品你会选哪一#"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="100人参与"
        android:layout_marginTop="12px"
        android:id="@+id/tv_find_hot_topic_join"
        android:textColor="@color/text_login_gray_s"
        android:textSize="20px"
        android:lines="1"
        android:paddingLeft="10px"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
</LinearLayout>