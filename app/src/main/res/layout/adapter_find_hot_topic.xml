<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sc_mm_270"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_150">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/iv_find_hot_topic"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/cir_solid_translucence"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/gap_left"
            android:paddingRight="@dimen/gap_right"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/sc_mm_28"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tv_find_hot_topic_name"
                android:lineSpacingExtra="@dimen/sc_mm_6"
                android:text="#推荐一件必买商品你会选哪一#"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="100人参与"
        android:layout_marginTop="@dimen/sc_mm_12"
        android:id="@+id/tv_find_hot_topic_join"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_15"
        android:lines="1"
        android:paddingRight="@dimen/gap_right"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
</LinearLayout>