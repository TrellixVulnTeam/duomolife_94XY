<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_382"
        android:layout_marginLeft="@dimen/sc_mm_20"
        android:layout_marginRight="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:scaleType="centerCrop">

        <ImageView
            android:id="@+id/iv_article_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_article_view_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sc_mm_36"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/sc_mm_12"
            android:drawableLeft="@drawable/art_eye_icon"
            android:drawablePadding="@dimen/sc_mm_15"
            android:gravity="center"
            android:paddingLeft="@dimen/sc_mm_15"
            android:paddingRight="@dimen/sc_mm_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_22"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_35"
        android:layout_marginRight="@dimen/sc_mm_20"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32"/>

    <TextView
        android:layout_marginBottom="@dimen/sc_mm_45"
        android:id="@+id/tv_article_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_35"
        android:layout_marginTop="@dimen/sc_mm_32"
        android:layout_marginRight="@dimen/sc_mm_20"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dimen_8_dp"
        android:maxLines="3"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_26"/>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_35"
            android:layout_marginBottom="@dimen/sc_mm_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_article_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sc_mm_60"
                android:layout_centerVertical="true"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_22"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical">

                <include layout="@layout/layout_com_art_bottom"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1mm"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:layout_marginRight="@dimen/sc_mm_20"
            android:background="@color/text_color_e_s"/>
    </LinearLayout>
</LinearLayout>