<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="@dimen/sc_mm_200"
        android:layout_height="@dimen/sc_mm_200"
        android:id="@+id/ll_hot_layout"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_hot_img"
            android:layout_width="@dimen/sc_mm_114"
            android:layout_height="@dimen/sc_mm_114"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tv_home_hot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_20"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>
</RelativeLayout>
