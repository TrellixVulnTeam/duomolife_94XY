<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="@dimen/sc_mm_75">
    <TextView
        android:layout_marginLeft="@dimen/sc_mm_26"
        android:layout_width="wrap_content"
        android:id="@+id/tv_indent_discount_name"
        android:textSize="@dimen/sc_mm_28"
        android:textColor="@color/text_black_t"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/sc_mm_24"
        android:id="@+id/tv_indent_discount_price"
        android:textSize="@dimen/sc_mm_28"
        android:gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_black_t"
        android:layout_height="wrap_content" />
</RelativeLayout>