<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingTop="@dimen/sc_mm_15"
              android:paddingBottom="@dimen/sc_mm_15">

    <ImageView
        android:id="@+id/iv_cart_com_pre"
        android:layout_width="@dimen/sc_mm_100"
        android:layout_height="@dimen/sc_mm_100"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_20"
        android:layout_marginRight="@dimen/sc_mm_24"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cart_com_pre_title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_24"/>

            <TextView
                android:id="@+id/tv_cart_com_pre_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_30"
                android:text="x1"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cart_cp_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_18"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22"/>

        <RelativeLayout
            android:id="@+id/rel_cart_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_18">

            <TextView
                android:id="@+id/tv_cart_cp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_26"/>

            <TextView
                android:id="@+id/tv_cart_cp_price_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sc_mm_40"
                android:layout_toRightOf="@+id/tv_cart_cp_price"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_normal_red"
                android:textSize="@dimen/sc_mm_22"/>

            <TextView
                android:id="@+id/tv_indent_com_pre_pro_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sel_border_clickable_gray_white"
                android:enabled="false"
                android:gravity="center"
                android:paddingLeft="@dimen/sc_mm_15"
                android:paddingTop="@dimen/sc_mm_10"
                android:paddingRight="@dimen/sc_mm_15"
                android:paddingBottom="@dimen/sc_mm_10"
                android:textColor="@color/text_gray_hint_n"
                android:textSize="@dimen/sc_mm_28"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>