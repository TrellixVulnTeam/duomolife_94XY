<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="360px"
        android:layout_height="360px"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/iv_integral_double_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_integral_double_product_tag_out"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:src="@drawable/goods_sold_out"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_integral_double_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_marginRight="14px"
        android:layout_marginTop="14px"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_4"
        android:lines="2"
        android:textColor="@color/text_black_t"
        android:textSize="24px" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="22px"
        android:layout_marginLeft="14px"
        android:layout_marginRight="14px"
        android:layout_marginTop="14px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_integral_double_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ï¿¥369"
            android:textColor="@color/text_normal_red"
            android:textSize="26px" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22px"
            android:textColor="@color/white"
            android:gravity="right|center_vertical"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:paddingTop="4px"
            android:paddingBottom="4px"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="16px"
            android:background="@drawable/border_circle_4_yellow"
            android:layout_toRightOf="@id/tv_integral_double_product_price"
            android:id="@+id/tv_integral_double_product_return"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>