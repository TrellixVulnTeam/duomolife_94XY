<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/border_rect_four_gray_c_one_bg_white"
    android:padding="1px"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="38px"
        android:layout_marginRight="44px"
        android:layout_height="86px">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="26px"
            android:layout_centerVertical="true"
            android:id="@+id/tv_integral_lottery_number"
            android:textColor="@color/text_login_gray_s"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="28px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_integral_lottery_status"
            android:textColor="@color/sel_font_yel_fsc_gray_s"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="38px"
        android:layout_marginRight="44px"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="220px"
            android:layout_height="220px"
            android:id="@+id/iv_lottery_product_cover"
            app:layout_auto_basewidth = "height"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="32px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_lottery_product_cover"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/text_black_t"
                android:id="@+id/tv_lottery_product_name"
                android:textSize="28px"
                android:lineSpacingExtra="@dimen/dimen_5_dp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="24px"
                android:id="@+id/tv_integral_lottery_total"
                android:textColor="@color/text_login_gray_s"
                android:layout_marginTop="54px"
                android:layout_below="@id/tv_lottery_product_name"
                android:lineSpacingExtra="@dimen/dimen_7_dp"
                android:text="@string/integral_lottery_number"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/border_bottom_line"
        android:layout_height="114px">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_integral_lottery_time_status"
            android:textColor="@color/sel_font_yel_fsc_black"
            android:layout_centerVertical="true"
            android:textSize="28px"
            android:text="中奖倒计时"
            android:layout_height="wrap_content" />
        <cn.iwgang.countdownview.CountdownView
            android:layout_width="wrap_content"
            android:layout_marginLeft="17px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/ct_integral_lottery_time"
            app:isShowDay="true"
            android:visibility="gone"
            app:isShowHour="true"
            android:layout_toRightOf="@id/tv_integral_lottery_time_status"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixGravity="center"
            app:isHideTimeBackground="false"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:suffixDay="天"
            app:suffixTextColor="@color/text_black_t"
            app:suffixTextSize="28px"
            app:timeTextColor="@color/text_black_t"
            app:timeTextSize="28px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:layout_marginRight="52px"
        android:gravity="center"
        android:id="@+id/rel_integral_lottery_prize"
        android:layout_height="192px"
        app:layout_auto_basewidth = "height">
    </RelativeLayout>
</LinearLayout>