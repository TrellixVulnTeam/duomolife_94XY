<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/sc_mm_30"
        android:id="@+id/tv_integral_lottery_award_time"
        android:textSize="@dimen/sc_mm_26"
        android:background="@drawable/border_bottom_line"
        android:textColor="@color/text_login_gray_s"
        android:gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_68" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingRight="@dimen/sc_mm_28"
        android:gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_240">
        <RelativeLayout
            android:layout_width="@dimen/sc_mm_180"
            android:background="@drawable/border_rect_four_gray_c_one_bg_white"
            android:layout_height="@dimen/sc_mm_180"
            android:padding="0.5dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/rel_lottery_award"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:id="@+id/iv_integral_lottery_award_image"
                />
            <ImageView
                android:layout_width="@dimen/sc_mm_130"
                android:layout_height="@dimen/sc_mm_130"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/sel_integral_lottery_award_tag"
                android:id="@+id/iv_integral_lottery_award_tag"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sc_mm_30"
            android:layout_toRightOf="@id/rel_lottery_award"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_integral_lottery_award_name"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_26"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sc_mm_20"
                android:id="@+id/tv_integral_lottery_award_count"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_26"
                android:text="x1"
                android:gravity="center_vertical|right"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="@dimen/sc_mm_180"
                android:textSize="@dimen/sc_mm_28"
                android:layout_marginTop="@dimen/sc_mm_30"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:text="立即领取"
                android:visibility="invisible"
                android:id="@+id/tv_integral_lottery_award_get"
                android:background="@drawable/border_cir_5dp_solid_yel_ffae"
                android:gravity="center"
                android:layout_height="@dimen/sc_mm_60" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>