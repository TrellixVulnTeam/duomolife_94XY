<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="360px"
        android:layout_height="360px"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/iv_integral_shop_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_integral_shop_product_tag_out"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_centerInParent="true"
            android:src="@drawable/goods_sold_out"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_integral_shop_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_marginTop="14px"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_4"
        android:lines="2"
        android:textColor="@color/text_black_t"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_integral_shop_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_marginTop="14px"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/text_normal_red"
        android:textSize="26px" />
</LinearLayout>