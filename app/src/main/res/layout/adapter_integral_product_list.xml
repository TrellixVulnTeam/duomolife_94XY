<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/sc_mm_360"
        android:layout_height="@dimen/sc_mm_360"
        >

        <ImageView
            android:id="@+id/iv_integral_shop_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_integral_shop_product_tag_out"
            android:layout_width="@dimen/sc_mm_180"
            android:layout_height="@dimen/sc_mm_180"
            android:layout_centerInParent="true"
            android:src="@drawable/goods_sold_out"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_integral_shop_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_18"
        android:layout_marginRight="@dimen/sc_mm_18"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_4"
        android:lines="2"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24" />

    <TextView
        android:id="@+id/tv_integral_shop_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sc_mm_28"
        android:layout_marginLeft="@dimen/sc_mm_18"
        android:layout_marginRight="@dimen/sc_mm_18"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_26" />
</LinearLayout>