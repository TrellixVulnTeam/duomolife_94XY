<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sc_mm_100">

    <TextView
        android:id="@+id/tv_communal_present_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_30"/>

    <TextView
        android:id="@+id/tv_communal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_communal_present_tag"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_30"/>
</RelativeLayout>