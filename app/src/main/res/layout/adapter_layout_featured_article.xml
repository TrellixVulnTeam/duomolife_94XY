<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_403">

        <ImageView
            android:id="@+id/iv_featured_article_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="@dimen/sc_mm_138"
            android:layout_height="@dimen/sc_mm_40"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/sc_mm_24"
            android:layout_marginRight="@dimen/sc_mm_26"
            android:background="@drawable/border_circle_twenty_translucence"
            android:gravity="center"
            android:text="立即购买>"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_22" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32"
        android:layout_marginLeft="@dimen/sc_mm_40"
        android:layout_marginStart="@dimen/sc_mm_40"
        android:layout_marginRight="@dimen/sc_mm_42"
        android:id="@+id/tv_featured_article_title"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sc_mm_36"
        android:textSize="@dimen/sc_mm_28"
        android:textColor="@color/text_login_gray_s"
        android:lineSpacingExtra="@dimen/sc_mm_14"
        android:id="@+id/tv_featured_article_content"
        android:layout_marginLeft="@dimen/sc_mm_40"
        android:layout_marginStart="@dimen/sc_mm_40"
        android:layout_marginRight="@dimen/sc_mm_42"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_40"
        android:layout_height="@dimen/sc_mm_80">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:id="@+id/tv_featured_article_publish_time"
            android:text="2019-03-15"
            android:textColor="@color/text_gray_hint_n"
            android:textSize="@dimen/sc_mm_22"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/sc_mm_42"
            android:drawablePadding="@dimen/sc_mm_10"
            android:text="32"
            android:drawableLeft="@drawable/art_comment_icon"
            android:id="@+id/tv_featured_article_count_comment"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_featured_article_count_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sc_mm_20"
            android:layout_toStartOf="@+id/tv_featured_article_count_comment"
            android:layout_toLeftOf="@id/tv_featured_article_count_comment"
            android:drawableLeft="@drawable/sel_comment_like_heart"
            android:drawablePadding="@dimen/sc_mm_10"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/sc_mm_42"
            android:text="32"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />
    </RelativeLayout>
    <include layout="@layout/layout_communal_recycler_wrap"/>
</LinearLayout>