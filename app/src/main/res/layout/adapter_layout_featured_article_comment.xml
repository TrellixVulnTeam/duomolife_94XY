<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/sc_mm_70"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginLeft="@dimen/gap_left"
        android:id="@+id/civ_feature_comment_avatar"
        android:layout_height="@dimen/sc_mm_70" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginLeft="@dimen/sc_mm_20"
        android:layout_marginRight="@dimen/sc_mm_30"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_featured_comment_nickname"
            android:lines="1"
            android:textSize="@dimen/sc_mm_30"
            android:textColor="@color/text_login_gray_s"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sc_mm_24"
            android:layout_marginTop="@dimen/sc_mm_16"
            android:textColor="@color/text_gray_hint_n"
            android:id="@+id/tv_featured_comment_time"
            android:text="2019-03-12"
            android:layout_below="@id/tv_featured_comment_nickname"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/sel_comment_like_heart"
            android:drawablePadding="@dimen/sc_mm_10"
            android:id="@+id/tv_featured_comment_liked"
            android:textSize="@dimen/sc_mm_24"
            android:text="18"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/tv_featured_comment_time"
            android:textColor="@color/text_login_gray_s"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/sc_mm_30"
            android:lineSpacingExtra="@dimen/sc_mm_16"
            android:layout_marginBottom="@dimen/sc_mm_40"
            android:textSize="@dimen/sc_mm_26"
            android:id="@+id/tv_featured_comment_content"
            android:textColor="@color/text_black_t"
            android:layout_below="@id/tv_featured_comment_time"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>