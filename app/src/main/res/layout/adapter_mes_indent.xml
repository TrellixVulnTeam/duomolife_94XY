<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray_f"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_30"
    android:paddingRight="@dimen/sc_mm_30">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88">

        <TextView
            android:id="@+id/tv_mes_indent_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sc_mm_40"
            android:layout_centerInParent="true"
            android:background="@drawable/border_cir_four_bg_all_gray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sc_mm_12"
            android:paddingRight="@dimen/sc_mm_12"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/sc_mm_30">

        <TextView
            android:id="@+id/tv_mes_indent_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_28"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mes_indent_cover"
                android:layout_width="@dimen/sc_mm_120"
                android:layout_height="@dimen/sc_mm_120"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_26"
                android:minHeight="@dimen/sc_mm_120">

                <TextView
                    android:minHeight="@dimen/sc_mm_90"
                    android:id="@+id/tv_mes_indent_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/defaul"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="@dimen/sc_mm_28" />

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/tv_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defaul"
                    android:textColor="@color/text_login_blue_z"
                    android:textSize="@dimen/sc_mm_28" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>