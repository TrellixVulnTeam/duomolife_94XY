<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/sc_mm_30"
    android:paddingRight="@dimen/gap_right"
    android:paddingTop="@dimen/sc_mm_30">

    <CheckBox
        android:id="@+id/cb_collect_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:button="@null"
        android:drawableRight="@drawable/sel_check_box_shop_car"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/sc_mm_20"
        android:paddingLeft="@dimen/sc_mm_24"
        android:paddingRight="@dimen/sc_mm_12"
        android:paddingTop="@dimen/sc_mm_20"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="@dimen/sc_mm_176"
        android:layout_height="@dimen/sc_mm_176"
        >

        <ImageView
            android:id="@+id/iv_mine_col_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sc_mm_12"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_collect_pro_sack_tag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_42"
            android:layout_alignParentBottom="true"
            android:background="#7f000000"
            android:gravity="center"
            android:text="已失效"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/sc_mm_30">

        <TextView
            android:id="@+id/tv_mine_col_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_mine_col_pro_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mine_col_pro_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/sc_mm_18"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_normal_red"
            android:textSize="@dimen/sc_mm_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/sc_mm_22"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_col_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="@color/text_normal_red"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_mine_col_pro_buy"
                android:layout_width="@dimen/sc_mm_120"
                android:layout_height="@dimen/sc_mm_50"
                android:background="@drawable/border_circle_two_red_white"

                android:gravity="center"
                android:text="去购买"
                android:textColor="@color/text_red_color"
                android:textSize="@dimen/sc_mm_24" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>