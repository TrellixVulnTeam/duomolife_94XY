<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/item_divider_gray_f_two_px"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_16">

        <include layout="@layout/layout_countdown_time_hours_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sc_mm_30"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:paddingTop="@dimen/sc_mm_30">


        <ImageView
            android:id="@+id/img_mine_warm_product"
            android:layout_width="@dimen/sc_mm_174"
            android:layout_height="@dimen/sc_mm_174"
            android:scaleType="centerCrop"
             />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_176"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sc_mm_30">

            <TextView
                android:id="@+id/tv_mine_warm_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mine_warm_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28" />

                <TextView
                    android:id="@+id/tv_mine_warm_set_status"
                    android:layout_width="@dimen/sc_mm_160"
                    android:layout_height="@dimen/sc_mm_58"
                    android:background="@drawable/selector_status_mine_warm"

                    android:gravity="center"
                    android:textColor="@color/selector_font_white_gray"
                    android:textSize="@dimen/sc_mm_28" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
