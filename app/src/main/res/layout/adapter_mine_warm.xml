<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/item_divider_gray_f_two_px"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical"
        android:paddingLeft="30px">

        <include layout="@layout/layout_countdown_time_hours_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="30px"
        android:paddingTop="30px">


        <ImageView
            android:id="@+id/img_mine_warm_product"
            android:layout_width="174px"
            android:layout_height="174px"
            android:layout_marginLeft="24px"
            android:scaleType="centerCrop"
            app:layout_auto_basewidth="height" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="176px"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/gap_right"
            android:layout_marginLeft="30px">

            <TextView
                android:id="@+id/tv_mine_warm_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                android:textColor="@color/text_black_t"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mine_warm_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="@color/text_black_t"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_mine_warm_set_status"
                    android:layout_width="160px"
                    android:layout_height="58px"
                    android:background="@drawable/selector_status_mine_warm"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/selector_font_white_gray"
                    android:textSize="28px" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
