<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_foreShow_product_time_week"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/text_black_t"
        android:text="@string/time_week_text"
        android:layout_marginTop="54px"
        android:textSize="32px"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="20px"
        android:layout_height="100px">
        <View
            android:layout_width="6px"
            android:layout_centerVertical="true"
            android:background="@color/text_normal_red"
            android:id="@+id/v_red"
            android:layout_height="34px"/>
        <TextView
            android:layout_toRightOf="@id/v_red"
            android:layout_width="match_parent"
            android:layout_marginLeft="18px"
            android:textColor="@color/text_black_t"
            android:textSize="28px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/time_product_clock_new"
            android:id="@+id/tv_spring_time_shaft"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>