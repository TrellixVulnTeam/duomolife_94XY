<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_239"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/sc_mm_118"
        android:id="@+id/cir_img_type_area"
        android:layout_height="@dimen/sc_mm_118"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_18"
        android:id="@+id/tv_type_area_name"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28"
        android:text="必买清单"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_8"
        android:id="@+id/tv_type_area_description"
        android:textColor="@color/text_gray_hint_n"
        android:textSize="@dimen/sc_mm_20"
        android:text="类型描述"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
</LinearLayout>