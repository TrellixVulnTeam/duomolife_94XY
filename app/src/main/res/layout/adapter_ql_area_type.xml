<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="239px"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="118px"
        android:id="@+id/cir_img_type_area"
        android:layout_height="118px"
        app:layout_auto_basewidth = "height"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="18px"
        android:id="@+id/tv_type_area_name"
        android:textColor="@color/text_black_t"
        android:textSize="28px"
        android:text="必买清单"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8px"
        android:id="@+id/tv_type_area_description"
        android:textColor="@color/text_gray_hint_n"
        android:textSize="20px"
        android:text="类型描述"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
</LinearLayout>