<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="375px"
        android:paddingLeft="22px"
        android:paddingRight="20px"
        android:id="@+id/fl_type_center"
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="148px"
            android:layout_gravity="center_vertical|bottom|right"
            android:id="@+id/iv_type_center"
            android:layout_height="148px"
            app:layout_auto_basewidth = "height"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_type_center_name"
                android:textColor="@color/text_red_color"
                android:textSize="30px"
                android:text="热销单品"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="11px"
                android:id="@+id/tv_type_center_description"
                android:textColor="@color/text_gray_hint_n"
                android:textSize="20px"
                android:text="好货超便宜"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>