<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/tv_ql_mine_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_login_gray_s"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_ql_mine_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/sel_text_ql_gp_red_gray"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical"
        android:background="@drawable/border_top_bottom_line"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gp_product"
                android:layout_width="120px"
                android:layout_height="120px"
                android:scaleType="centerCrop"
                app:layout_auto_basewidth="height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gp_indent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/dimen_2dp"
                    android:maxLines="2"
                    android:textColor="@color/text_black_t"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_direct_indent_pro_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26px"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:lines="1"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="x1"
                    android:textColor="@color/text_black_t"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical|right"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/tv_ql_gp_mine_details"
            android:layout_width="160px"
            android:layout_height="58px"
            android:background="@drawable/border_cir_1dp5_gray_white"
            android:clickable="true"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/text_login_gray_s"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_ql_gp_mine_inv_join"
            android:layout_width="wrap_content"
            android:minWidth="160px"
            android:layout_height="58px"
            android:layout_marginLeft="20px"
            android:background="@drawable/border_cir_1dp5_nor_red"
            android:clickable="true"
            android:gravity="center"
            android:text="邀请参团"
            android:textColor="@color/white"
            android:textSize="26px" />
    </LinearLayout>
</LinearLayout>