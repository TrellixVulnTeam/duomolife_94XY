<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_68"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingRight="@dimen/sc_mm_20">

        <TextView
            android:id="@+id/tv_ql_mine_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_26" />

        <TextView
            android:id="@+id/tv_ql_mine_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/sel_text_ql_gp_red_gray"
            android:textSize="@dimen/sc_mm_28" />
    </LinearLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_180"
        android:gravity="center_vertical"
        android:background="@drawable/border_top_bottom_line"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingRight="@dimen/sc_mm_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gp_product"
                android:layout_width="@dimen/sc_mm_120"
                android:layout_height="@dimen/sc_mm_120"
                android:scaleType="centerCrop"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gp_indent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/dimen_2dp"
                    android:maxLines="2"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28" />

                <TextView
                    android:id="@+id/tv_direct_indent_pro_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sc_mm_26"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:lines="1"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="@dimen/sc_mm_22" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="x1"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_98"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/sc_mm_20">

        <TextView
            android:id="@+id/tv_ql_gp_mine_details"
            android:layout_width="@dimen/sc_mm_160"
            android:layout_height="@dimen/sc_mm_58"
            android:background="@drawable/border_cir_1dp5_gray_white"

            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_26" />

        <TextView
            android:id="@+id/tv_ql_gp_mine_inv_join"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/sc_mm_160"
            android:layout_height="@dimen/sc_mm_58"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:background="@drawable/border_cir_1dp5_nor_red"

            android:gravity="center"
            android:text="邀请参团"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_26" />
    </LinearLayout>
</LinearLayout>