<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sc_mm_24"
        android:paddingTop="@dimen/sc_mm_30"
        android:paddingRight="@dimen/sc_mm_30"
        android:paddingBottom="@dimen/sc_mm_30">

        <RelativeLayout
            android:id="@+id/rel_goods_layout"
            android:layout_width="@dimen/sc_mm_176"
            android:layout_height="@dimen/sc_mm_176">

            <ImageView
                android:id="@+id/iv_ql_bl_product"
                android:layout_width="@dimen/sc_mm_176"
                android:layout_height="@dimen/sc_mm_176"
                android:scaleType="centerCrop" />

            <include layout="@layout/layout_communal_pro_out_img" />
        </RelativeLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/sc_mm_176"
            android:orientation="vertical"
            android:paddingLeft="@dimen/sc_mm_30">

            <TextView
                android:id="@+id/tv_ql_bl_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_ql_bl_product_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_16"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/sel_font_red_n_gray"
                android:textSize="@dimen/sc_mm_22" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ql_bl_pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:textColor="@color/sel_font_b_gray_un_red"
                    android:textSize="@dimen/sc_mm_28" />

                <ImageView
                    android:id="@+id/iv_ql_bl_add_car"
                    android:layout_width="@dimen/sc_mm_41"
                    android:layout_height="@dimen/sc_mm_35"
                    android:layout_alignBaseline="@id/iv_ql_bl_add_car"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sel_ql_shop_b_car" />
            </RelativeLayout>

            <include
                layout="@layout/layout_communal_market_label_flex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
