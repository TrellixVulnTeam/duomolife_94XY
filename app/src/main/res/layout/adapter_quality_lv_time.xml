<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/sc_mm_5"
    android:paddingLeft="@dimen/sc_mm_8"
    android:paddingRight="@dimen/sc_mm_8"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_quality_time_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_240"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@+id/tv_quality_time_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingTop="@dimen/sc_mm_11"
        android:text="北鼎K205电水壶"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_24" />

    <TextView
        android:id="@+id/tv_quality_time_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sc_mm_11"
        android:gravity="center_vertical"
        android:textColor="@color/text_red_color"
        android:textSize="@dimen/sc_mm_24" />
</LinearLayout>