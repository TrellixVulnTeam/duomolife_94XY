<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20px"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:paddingBottom="10px"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:minWidth="140px"
            android:textSize="28px"

            android:textColor="@color/text_black_t"
            android:id="@+id/tv_refund_type"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="28px"
            android:textColor="@color/text_black_t"
            android:id="@+id/tv_refund_date"
            android:lineSpacingExtra="@dimen/dimen_5_dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
