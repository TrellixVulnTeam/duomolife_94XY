<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="76px"
        android:src="@drawable/search_user_empty"
        android:layout_marginBottom="60px"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="28px"
        android:id="@+id/tv_search_empty_title"
        android:textColor="@color/text_black_t"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="320px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28px"
        android:id="@+id/tv_search_empty_more"
        android:clickable="true"
        android:text="@string/look_more_good"
        android:background="@drawable/border_circle_two_str_solid_red"
        android:layout_height="67px" />
</LinearLayout>