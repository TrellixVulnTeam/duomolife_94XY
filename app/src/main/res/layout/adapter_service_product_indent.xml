<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_service_product_indent_image"
        android:layout_width="@dimen/sc_mm_120"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_height="@dimen/sc_mm_120"
        android:scaleType="centerCrop"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_service_product_indent_image"
        android:layout_marginRight="@dimen/gap_right"
        android:layout_marginLeft="@dimen/sc_mm_30"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tv_service_product_indent_name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/text_normal_red"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sc_mm_24"
            android:layout_marginTop="@dimen/sc_mm_18"
            android:layout_below="@id/tv_service_product_indent_name"
            android:id="@+id/tv_service_product_indent_status"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/text_black_t"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sc_mm_24"
            android:layout_marginTop="@dimen/sc_mm_26"
            android:layout_below="@id/tv_service_product_indent_status"
            android:id="@+id/tv_service_product_indent_price"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>