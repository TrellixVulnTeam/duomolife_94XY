<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/sc_mm_80"
        android:layout_height="@dimen/sc_mm_80"
        android:id="@+id/iv_share_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/iv_share_icon"
        android:id="@+id/tv_share_title"
        android:textSize="@dimen/sc_mm_24"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_26"
        android:text="微信朋友圈"
        android:textColor="@color/text_login_gray_s"/>
</LinearLayout>