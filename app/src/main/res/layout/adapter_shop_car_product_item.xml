<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/gap_right"
        android:paddingTop="28px">

        <CheckBox
            android:id="@+id/cb_shop_car_sel"
            android:layout_width="80px"
            android:layout_height="160px"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:button="@null"
            android:clickable="true"
            android:drawableLeft="@drawable/sel_check_box_shop_car"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingLeft="24px"
            android:paddingRight="@dimen/gap_right" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_communal_act_desc"/>

            <LinearLayout
                android:id="@+id/ll_car_pro_img"
                android:layout_width="176px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_communal_activity_topic_tag"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="176px"
                    app:layout_auto_basewidth="height">

                    <ImageView
                        android:id="@+id/img_shop_car_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_buy_sack_tag"
                        android:layout_width="match_parent"
                        android:layout_height="42px"
                        android:layout_alignParentBottom="true"
                        android:background="#7f000000"
                        android:gravity="center"
                        android:text="已抢光"
                        android:textColor="@color/white"
                        android:textSize="24px"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_w_buy_tag"
                        android:layout_width="match_parent"
                        android:layout_height="42px"
                        android:layout_alignParentBottom="true"
                        android:background="#7fffae00"
                        android:gravity="center"
                        android:text="待售"
                        android:textColor="@color/white"
                        android:textSize="24px"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_communal_activity_topic_tag"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@id/ll_car_pro_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dimen_2dp"
                    android:lines="1"
                    android:textColor="@color/text_black_t"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_shop_car_product_sku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_15_dp"
                    android:drawableRight="@drawable/sel_text_sku_drawable_right"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:lines="1"
                    android:paddingBottom="14px"
                    android:paddingRight="20px"
                    android:paddingTop="14px"
                    android:textColor="@color/text_login_gray_s"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_shop_car_pro_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_red_color"
                    android:textSize="22px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_car_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/sel_red_black_font_color"
                        android:textSize="28px" />

                    <RelativeLayout
                        android:layout_width="202px"
                        android:layout_height="62px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <include layout="@layout/layout_communal_rect_add" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="80px"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_communal_recycler_wrap"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/light_gray_f"
        android:id="@+id/tv_line_ten"
        android:visibility="gone"
        android:layout_height="@dimen/dimen_10_dp"/>
</LinearLayout>
