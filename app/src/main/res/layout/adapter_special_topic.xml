<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_communal_cover_padding"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/sc_mm_20"
            android:id="@+id/tv_sp_label"
            android:paddingTop="@dimen/sc_mm_10"
            android:paddingBottom="@dimen/sc_mm_10"
            android:paddingLeft="@dimen/sc_mm_15"
            android:paddingRight="@dimen/sc_mm_15"
            android:visibility="gone"
            android:drawablePadding="@dimen/sc_mm_5"
            android:textSize="@dimen/sc_mm_22"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/tag_label_icon"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_search_sp_title"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32"
        android:gravity="center"
        android:paddingTop="@dimen/sc_mm_20"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_search_sp_descrip"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_26"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:paddingTop="@dimen/sc_mm_26"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sc_mm_40"/>
</LinearLayout>