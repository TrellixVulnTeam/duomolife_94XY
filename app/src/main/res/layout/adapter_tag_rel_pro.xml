<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="200px"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:padding="@dimen/dimen_1dp"
        android:background="@drawable/border_rect_four_gray_c_bg_white"
        android:id="@+id/iv_tag_rel_pro"
        android:layout_height="200px"
        app:layout_auto_basewidth = "height"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingTop="16px"
        android:textColor="@color/text_login_gray_s"
        android:textSize="24px"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/tv_tag_rel_pro_name"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:paddingTop="20px"
        android:paddingBottom="10px"
        android:textColor="@color/text_normal_red"
        android:textSize="22px"
        android:id="@+id/tv_tag_rel_pro_price"
        android:layout_height="wrap_content" />
</LinearLayout>