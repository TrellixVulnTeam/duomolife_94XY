<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:gravity="center_vertical"
        android:paddingRight="100px"
        android:layout_height="180px">
        <ImageView
            android:layout_width="198px"
            android:layout_height="140px"
            android:id="@+id/iv_topic_content"
            android:scaleType="centerCrop"
            app:layout_auto_basewidth = "height"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_topic_content_title"
                android:textColor="@color/text_black_t"
                android:textSize="32px"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/dimen_8_dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_below="@id/tv_topic_content_title"
                android:id="@+id/tv_topic_content_join"
                android:textSize="24px"
                android:textColor="@color/text_login_gray_s"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>