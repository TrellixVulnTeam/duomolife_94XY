<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sc_mm_20"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/sc_mm_100"
        android:layout_height="@dimen/sc_mm_180">
        <ImageView
            android:layout_width="@dimen/sc_mm_198"
            android:layout_height="@dimen/sc_mm_140"
            android:id="@+id/iv_topic_content"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_topic_content_title"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_32"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/dimen_8_dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sc_mm_20"
                android:layout_below="@id/tv_topic_content_title"
                android:id="@+id/tv_topic_content_join"
                android:textSize="@dimen/sc_mm_24"
                android:textColor="@color/text_login_gray_s"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>