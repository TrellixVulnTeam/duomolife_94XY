<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cir_five_ff_white_bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_35"
        android:text="多么会员专享特权"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_34"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_power_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_70"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginRight="@dimen/sc_mm_70"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_70"
        android:layout_marginLeft="@dimen/sc_mm_43"
        android:layout_marginTop="@dimen/sc_mm_40"
        android:layout_marginRight="@dimen/sc_mm_43"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:background="@drawable/shap_commit_report_bg"
        android:gravity="center"
        android:text="立即开通,享100元优惠券"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_32"
        android:textStyle="bold" />
</LinearLayout>