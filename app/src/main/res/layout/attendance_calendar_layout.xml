<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_86"
        android:gravity="center"
        android:paddingLeft="@dimen/sc_mm_48"
        android:paddingRight="@dimen/sc_mm_48">

        <TextView
            android:id="@+id/tv_att_calendar_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:drawableLeft="@drawable/att_calendar_icon"
            android:drawablePadding="@dimen/dimen_16_dp"
            android:gravity="center_vertical"
            android:text="2016-06-16"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/sc_mm_30" />

        <TextView
            android:id="@+id/tv_attendance_calendar_warm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:drawablePadding="@dimen/dimen_10_dp"
            android:drawableRight="@drawable/sel_att_warm"
            android:gravity="center"
            android:text="签到提醒"
            android:textColor="@color/text_gray_hint_n"
            android:textSize="@dimen/sc_mm_24" />
    </RelativeLayout>

    <com.amkj.dmsh.views.SignCalendar
        android:id="@+id/popup_window_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_civ_two_five_gray_c"
        android:layout_marginLeft="@dimen/sc_mm_48"
        android:padding="@dimen/sc_mm_1"
        android:paddingBottom="@dimen/sc_mm_40"
        android:layout_marginRight="@dimen/sc_mm_48" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_98">
        <TextView
            android:id="@+id/tv_att_integra_rule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sc_mm_24"
            android:paddingRight="@dimen/gap_right"
            android:drawableLeft="@drawable/ques_tint_icon"
            android:layout_gravity="right"
            android:drawablePadding="5dp"
            android:text="积分规则"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_28" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/sc_mm_48"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_att_integ_detail"
            android:layout_marginLeft="@dimen/sc_mm_16"

            android:textSize="@dimen/sc_mm_28"
            android:text="积分明细" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/text_gray_c"
        android:layout_height="@dimen/sc_mm_1"/>
    <include layout="@layout/layout_communal_recycler_wrap" />
</LinearLayout>