<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dp"
        android:background="@color/gray_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialog_text_blue_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/dialog_text_blue_color"
            android:textSize="16sp" />
    </RelativeLayout>
    <com.amkj.dmsh.views.WheelView
        android:layout_width="match_parent"
        android:id="@+id/dialog_wheel_view"
        android:layout_height="215dp" />
</LinearLayout>