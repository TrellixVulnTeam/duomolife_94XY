<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/dl_quality"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_quality_header">
                <include layout="@layout/fragment_quality_header"/>
            </RelativeLayout>
            <com.flyco.tablayout.SlidingTabLayout
                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sc_mm_88"
                android:id="@+id/std_quality_type"
                android:background="@drawable/border_bottom_line"
                tl:tl_indicator_width_equal_title="true"
                tl:tl_indicator_height="@dimen/dimen_2dp"
                tl:tl_indicator_corner_radius="@dimen/dimen_1dp"
                tl:tl_indicator_color="@color/text_black_t"
                tl:tl_textUnselectColor="@color/text_black_t"
                tl:tl_textSelectColor="@color/text_login_gray_s"
                tl:tl_textsize="15sp"
                tl:tl_indicator_gravity="BOTTOM"
                tl:tl_indicator_style="NORMAL"/>
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:id="@+id/vp_quality"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/layout_float_ad"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/sc_mm_170"
        android:layout_gravity="start"
        android:background="@color/white"
        android:id="@+id/ll_drawer_quality"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="分类"
            android:textSize="@dimen/sc_mm_32"
            android:textColor="@color/text_black_t"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/sc_mm_63"
            android:layout_height="@dimen/sc_mm_88" />
        <View
            android:layout_width="match_parent"
            android:background="#e6e6e6"
            android:layout_height="@dimen/dimen_0p5_dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="@dimen/sc_mm_160"
                android:id="@+id/rv_quality_product_type"
                android:scrollbars="none"
                android:paddingRight="0.5dp"
                android:background="@drawable/border_right_line"
                android:layout_height="match_parent"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/rv_quality_product_type"
                android:id="@+id/rv_quality_product_type_specific"
                android:scrollbars="none"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>