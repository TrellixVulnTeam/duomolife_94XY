<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/sc_mm_22"
        android:layout_marginRight="@dimen/sc_mm_22"
        android:background="@drawable/border_rect_10dp_bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sc_mm_60"
        android:paddingRight="@dimen/sc_mm_60">

        <TextView
            android:id="@+id/tv_power_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sc_mm_43"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_34"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_55"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/load_loading_image" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/sc_mm_35"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_26" />
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="@dimen/sc_mm_340"
            android:layout_height="@dimen/sc_mm_70"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sc_mm_36"
            android:layout_marginBottom="@dimen/sc_mm_42"
            android:background="@drawable/shape_get_free_bg"
            android:gravity="center"
            android:text="@string/defaul"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_34" />
    </LinearLayout>
</LinearLayout>