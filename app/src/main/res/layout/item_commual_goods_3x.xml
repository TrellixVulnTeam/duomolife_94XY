<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_quality_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/sc_mm_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_236"
            android:scaleType="centerCrop" />

        <include layout="@layout/layout_communal_pro_out_img" />
    </RelativeLayout>

    <include
        layout="@layout/layout_activity_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sc_mm_35"
        android:layout_marginLeft="@dimen/sc_mm_12"
        android:layout_marginTop="@dimen/sc_mm_16" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:lines="2"
        android:maxLines="2"
        android:paddingLeft="@dimen/sc_mm_12"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t2"
        android:textSize="@dimen/sc_mm_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sc_mm_12">

        <ImageView
            android:id="@+id/iv_vip_logo_front"
            android:layout_width="@dimen/sc_mm_87"
            android:layout_height="@dimen/sc_mm_24"
            android:src="@drawable/vip_prive"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_8"
            android:layout_marginRight="@dimen/sc_mm_12"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/defaul"
            android:textColor="@color/red"
            android:textSize="@dimen/sc_mm_32" />
    </LinearLayout>
</LinearLayout>