<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coupon_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_coupon_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sc_mm_25"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sc_mm_50">

        <TextView
            android:id="@+id/tv_my_coupon"
            android:layout_width="@dimen/sc_mm_133"
            android:layout_height="@dimen/sc_mm_50"
            android:background="@drawable/shap_my_coupon_bg"
            android:gravity="center"
            android:text="@string/my_coupon"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22"/>
    </LinearLayout>
</RelativeLayout>