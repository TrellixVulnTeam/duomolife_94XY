<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_express"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/sc_mm_24"
    android:paddingBottom="@dimen/sc_mm_24">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/sc_mm_26"
        android:layout_height="@dimen/sc_mm_26"
        android:src="@drawable/express" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_20" />
    </LinearLayout>
</LinearLayout>
