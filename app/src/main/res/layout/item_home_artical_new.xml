<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_artical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_artical_cover"
        android:layout_width="@dimen/sc_mm_345"
        android:layout_height="@dimen/sc_mm_185"
        android:layout_marginTop="@dimen/sc_mm_24"
        android:layout_marginBottom="@dimen/sc_mm_24"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/sc_mm_28"
        android:layout_marginTop="@dimen/sc_mm_44"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_artical_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_30"/>

        <TextView
            android:id="@+id/tv_artical_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sc_mm_14"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|top"
            android:maxLines="2"
            android:text="@string/defaul"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_24"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1mm"
            android:background="@color/text_color_e_s"/>
    </LinearLayout>
</LinearLayout>