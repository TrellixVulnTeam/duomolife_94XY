<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_more_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sc_mm_38"
        android:paddingRight="@dimen/sc_mm_28"
        android:paddingBottom="@dimen/sc_mm_30">

        <TextView
            android:id="@+id/tv_catergory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="种草特辑"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/sc_mm_5"
            android:drawableRight="@drawable/black_next_icon"
            android:drawablePadding="@dimen/sc_mm_12"
            android:text="更多"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24"/>
    </RelativeLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_200"
        app:canLoop="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_catergory_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_f"
        android:paddingTop="@dimen/sc_mm_10"
        android:paddingBottom="@dimen/sc_mm_10"
        android:scrollbars="none"/>
</LinearLayout>