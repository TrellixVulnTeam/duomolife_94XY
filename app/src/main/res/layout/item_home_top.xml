<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sc_mm_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/sc_mm_90"
            android:layout_height="@dimen/sc_mm_90"
            android:layout_marginTop="@dimen/sc_mm_10"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_10"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bubble"
        android:layout_width="@dimen/sc_mm_60"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shap_bubble_bg"
        android:gravity="center"
        android:text="小气泡"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_18"/>
</RelativeLayout>