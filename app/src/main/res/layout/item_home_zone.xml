<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/sc_mm_30"
              android:paddingTop="@dimen/sc_mm_54"
              android:paddingBottom="@dimen/sc_mm_54">

    <TextView
        android:id="@+id/tv_zone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cover_left"
                android:layout_width="@dimen/sc_mm_143"
                android:layout_height="@dimen/sc_mm_143"
                android:layout_marginTop="@dimen/sc_mm_30"
                android:background="@drawable/home_goods_bg"
                android:padding="@dimen/sc_mm_1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cover_left"
                android:layout_marginTop="@dimen/sc_mm_24"
                android:textColor="@color/text_normal_red"
                android:textSize="@dimen/sc_mm_28"/>

            <TextView
                android:id="@+id/tv_market_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_price_left"
                android:layout_marginLeft="@dimen/sc_mm_20"
                android:layout_toRightOf="@+id/tv_price_left"
                android:textColor="@color/color_blue_reply_com"
                android:textSize="@dimen/sc_mm_20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_29"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_cover_right"
                android:layout_width="@dimen/sc_mm_143"
                android:layout_height="@dimen/sc_mm_143"
                android:layout_marginTop="@dimen/sc_mm_30"
                android:background="@drawable/home_goods_bg"
                android:padding="@dimen/sc_mm_1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_price_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cover_right"
                android:layout_marginTop="@dimen/sc_mm_24"
                android:textColor="@color/text_normal_red"
                android:textSize="@dimen/sc_mm_28"/>

            <TextView
                android:id="@+id/tv_market_price_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_price_right"
                android:layout_marginLeft="@dimen/sc_mm_20"
                android:layout_toRightOf="@+id/tv_price_right"
                android:textColor="@color/color_blue_reply_com"
                android:textSize="@dimen/sc_mm_20"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>