<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_180"
        android:background="@drawable/border_bottom_line"
        android:orientation="horizontal"
        android:padding="@dimen/sc_mm_30"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingTop="@dimen/sc_mm_30"
        android:paddingRight="@dimen/sc_mm_24"
        android:paddingBottom="@dimen/sc_mm_30">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/sc_mm_120"
            android:layout_height="@dimen/sc_mm_120"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_30"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sc_mm_30"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/defaul"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28"/>

            <TextView
                android:id="@+id/tv_sku_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_22"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/defaul"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_write"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_98"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/sc_mm_24">

        <TextView
            android:id="@+id/tv_max_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/max_score_yellow"
            android:textSize="@dimen/sc_mm_26"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sc_mm_58"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:background="@drawable/border_circle_three_yellow_white"
            android:gravity="center"
            android:minWidth="@dimen/sc_mm_160"
            android:paddingLeft="@dimen/sc_mm_15"
            android:paddingRight="@dimen/sc_mm_15"
            android:text="写点评"
            android:textColor="@color/max_score_yellow"
            android:textSize="@dimen/sc_mm_26"/>
    </LinearLayout>
</LinearLayout>