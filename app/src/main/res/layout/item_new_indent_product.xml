<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_new_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_28"
    android:paddingRight="@dimen/sc_mm_28">

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/sc_mm_27"
        android:paddingBottom="@dimen/sc_mm_27">

        <CheckBox
            android:id="@+id/checkbox_refund"
            android:layout_width="@dimen/sc_mm_72"
            android:layout_height="@dimen/sc_mm_128"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:drawableLeft="@drawable/selector_pay_way"
            android:drawablePadding="@dimen/sc_mm_24"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_direct_indent_pro"
            android:layout_width="@dimen/sc_mm_128"
            android:layout_height="@dimen/sc_mm_128"
            android:layout_gravity="center_vertical"
            android:background="@drawable/home_goods_bg"
            android:padding="@dimen/sc_mm_1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_direct_indent_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="@string/defaul"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_26"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_direct_indent_pro_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/sc_mm_22" />

            <TextView
                android:id="@+id/tv_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:textColor="@color/color_blue_reply_com"
                android:textSize="@dimen/sc_mm_24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_predict_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:text="@string/defaul"
                android:textColor="@color/text_login_blue_z"
                android:textSize="@dimen/sc_mm_22"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_30"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_direct_indent_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lines="1"
                android:text="@string/defaul"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_direct_pro_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_22" />

            <TextView
                android:id="@+id/tv_product_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:background="@drawable/shape_product_status_bg"
                android:paddingLeft="@dimen/sc_mm_5"
                android:paddingTop="@dimen/sc_mm_2"
                android:paddingRight="@dimen/sc_mm_5"
                android:paddingBottom="@dimen/sc_mm_2"
                android:textColor="#FF7800"
                android:textSize="@dimen/sc_mm_22"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_refund"
        android:layout_width="@dimen/sc_mm_140"
        android:layout_height="@dimen/sc_mm_54"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:background="@drawable/border_circle_three_gray_white"
        android:gravity="center"
        android:text="申请退款"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="@dimen/sc_mm_140"
        android:layout_height="@dimen/sc_mm_54"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:background="@drawable/border_circle_three_gray_white"
        android:gravity="center"
        android:text="售后详情"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24"
        android:visibility="gone" />
</LinearLayout>
