<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_28"
    android:paddingRight="@dimen/sc_mm_28">

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_183"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_direct_indent_pro"
            android:layout_width="@dimen/sc_mm_128"
            android:layout_height="@dimen/sc_mm_128"
            android:background="@drawable/home_goods_bg"
            android:padding="@dimen/sc_mm_1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_indent_pro_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="@string/defaul"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_26" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_33"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_direct_indent_pro_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:text="@string/defaul"
                        android:textColor="@color/text_black_t"
                        android:textSize="@dimen/sc_mm_28" />

                    <TextView
                        android:id="@+id/tv_direct_pro_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defaul"
                        android:textColor="@color/text_login_gray_s"
                        android:textSize="@dimen/sc_mm_22" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_indent_pro_sku"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/defaul"
                    android:textColor="@color/home_text_color"
                    android:textSize="@dimen/sc_mm_22" />

                <TextView
                    android:id="@+id/tv_product_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_33"
                    android:background="@drawable/shape_product_status_bg"
                    android:paddingLeft="@dimen/sc_mm_5"
                    android:paddingTop="@dimen/sc_mm_2"
                    android:paddingRight="@dimen/sc_mm_5"
                    android:paddingBottom="@dimen/sc_mm_2"
                    android:text="商品状态"
                    android:textColor="#FF7800"
                    android:textSize="@dimen/sc_mm_22"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deliver_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/defaul"
                    android:textColor="@color/text_login_blue_z"
                    android:textSize="@dimen/sc_mm_22"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_indent_pro_use_cp"
                    android:layout_width="@dimen/sc_mm_96"
                    android:layout_height="@dimen/sc_mm_29"
                    android:layout_gravity="right"
                    android:src="@drawable/no_use_coupon_icon"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_dir_indent_pro_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dir_indent_pro_status"
            android:layout_width="@dimen/sc_mm_140"
            android:layout_height="@dimen/sc_mm_54"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/sc_mm_20"
            android:layout_marginBottom="@dimen/sc_mm_20"
            android:background="@drawable/sel_border_clickable_gray_white"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/defaul"
            android:textColor="@color/sel_text_enable_light_blue_gray"
            android:textSize="@dimen/sc_mm_28" />
    </FrameLayout>
</LinearLayout>
