<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sc_mm_20"
    android:layout_marginBottom="@dimen/sc_mm_20"
    android:layout_marginRight="@dimen/sc_mm_20"
    android:background="@drawable/border_cir_7dp_bg_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_20"
    android:paddingTop="@dimen/sc_mm_30"
    android:paddingRight="@dimen/sc_mm_20"
    android:paddingBottom="@dimen/sc_mm_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sc_mm_30"
            android:layout_height="@dimen/sc_mm_30"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_17"
            android:layout_weight="1"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sc_mm_30"
            android:layout_height="@dimen/sc_mm_30"
            android:src="@drawable/answer" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_17"
            android:layout_weight="1"
            android:text="@string/defaul"
            android:textColor="#525252"
            android:textSize="@dimen/sc_mm_28" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reply_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_17"
        android:gravity="right"
        android:text="全部回答 >"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_20" />
</LinearLayout>