<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sc_mm_34"
    android:layout_marginRight="@dimen/sc_mm_34"
    android:background="@drawable/border_bottom_line"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/sc_mm_20"
    android:paddingBottom="@dimen/sc_mm_20">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/sc_mm_120"
        android:layout_height="@dimen/sc_mm_120"
        android:background="@drawable/load_loading_image"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_26"
        android:layout_weight="1"
        android:maxLines="2"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_26"/>

    <LinearLayout
        android:id="@+id/ll_write"
        android:layout_width="@dimen/sc_mm_150"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_write"
            android:layout_width="@dimen/sc_mm_90"
            android:layout_height="@dimen/sc_mm_36"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sel_subscriber_blue"
            android:gravity="center"
            android:text="写点评"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_max_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_12"
            android:gravity="center"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_20"/>
    </LinearLayout>
</LinearLayout>