<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sc_mm_34"
    android:layout_marginRight="@dimen/sc_mm_34"
    android:background="@drawable/border_top_line"
    android:paddingLeft="@dimen/sc_mm_11"
    android:paddingTop="@dimen/sc_mm_28"
    android:paddingRight="@dimen/sc_mm_11"
    android:paddingBottom="@dimen/sc_mm_28">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/sc_mm_120"
        android:layout_height="@dimen/sc_mm_120"
        android:layout_centerVertical="true"
        android:background="@drawable/load_loading_image" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_18"
        android:layout_toRightOf="@+id/iv_cover"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_name"
        android:layout_marginLeft="@dimen/sc_mm_20"
        android:layout_marginTop="@dimen/sc_mm_16"
        android:layout_toRightOf="@+id/iv_cover"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />


        <TextView
            android:id="@+id/tv_write"
            android:layout_width="@dimen/sc_mm_124"
            android:layout_height="@dimen/sc_mm_43"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/evaluate_go"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>
</RelativeLayout>