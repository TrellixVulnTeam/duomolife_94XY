<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_360" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_44"
        android:background="#fff1eadb"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/sc_mm_14"
        android:text="@string/defaul"
        android:textColor="#ff9e895f"
        android:textSize="@dimen/sc_mm_22" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/sc_mm_16"
        android:paddingTop="@dimen/sc_mm_14"
        android:paddingRight="@dimen/sc_mm_20"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24" />

    <include
        layout="@layout/layout_activity_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sc_mm_30"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_marginTop="@dimen/sc_mm_16"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_marginTop="@dimen/sc_mm_12"
        android:layout_marginBottom="@dimen/sc_mm_24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/red"
            android:textSize="@dimen/sc_mm_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_14"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_22" />
    </LinearLayout>
</LinearLayout>