<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sc_mm_237"
    android:layout_height="@dimen/sc_mm_416"
    android:layout_marginBottom="@dimen/sc_mm_10"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/sc_mm_237"
        android:layout_height="@dimen/sc_mm_237"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_marginTop="@dimen/sc_mm_14"
        android:layout_marginRight="@dimen/sc_mm_16"
        android:ellipsize="end"
        android:lineSpacingExtra="-5mm"
        android:maxLines="2"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t2"
        android:textSize="@dimen/sc_mm_26" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:text="新人专享价¥0"
        android:textColor="#FFFF2A3B"
        android:textSize="@dimen/sc_mm_22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_start_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:text="@string/defaul"
        android:textColor="@color/color_blue_reply_com"
        android:textSize="@dimen/sc_mm_22" />
</LinearLayout>