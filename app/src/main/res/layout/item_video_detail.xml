<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.amkj.dmsh.homepage.view.JzvdStdTikTok
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/sc_mm_22"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_favor"
                android:layout_width="@dimen/sc_mm_49"
                android:layout_height="@dimen/sc_mm_49"
                android:src="@drawable/sel_video_favor" />

            <TextView
                android:id="@+id/tv_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_12"
                android:text="@string/defaul"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_26" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="@dimen/sc_mm_56"
                android:layout_height="@dimen/sc_mm_52"
                android:layout_marginTop="@dimen/sc_mm_47"
                android:src="@drawable/dymessage" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_12"
                android:text="@string/defaul"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_26" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/sc_mm_52"
                android:layout_height="@dimen/sc_mm_48"
                android:layout_marginTop="@dimen/sc_mm_47"
                android:src="@drawable/dyshare" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_12"
                android:text="@string/defaul"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_26" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sc_mm_20"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_32" />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sc_mm_150"
                android:layout_margin="@dimen/sc_mm_16" />

            <com.amkj.dmsh.views.indicator.BannerIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:gap="@dimen/sc_mm_10"
                app:sleider_align="Center"
                app:slider_height="@dimen/sc_mm_10"
                app:slider_width="@dimen/sc_mm_10" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>