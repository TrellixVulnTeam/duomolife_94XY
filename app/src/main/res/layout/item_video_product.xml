<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/sc_mm_10"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_360"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_cover"
            android:layout_margin="@dimen/sc_mm_10"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:text="@string/defaul"
            android:textColor="@color/text_normal_red"
            android:textSize="@dimen/sc_mm_30" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/sel_art_collect_star"
            android:drawablePadding="@dimen/sc_mm_10"
            android:gravity="center"
            android:paddingLeft="@dimen/sc_mm_16"
            android:paddingRight="@dimen/sc_mm_16"
            android:paddingBottom="@dimen/sc_mm_25"
            android:text="收藏"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/sc_mm_47"
            android:layout_height="@dimen/sc_mm_46"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/sc_mm_15"
            android:src="@drawable/play" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
