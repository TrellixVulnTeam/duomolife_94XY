<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sc_mm_270"
    android:layout_height="@dimen/sc_mm_140"
    android:layout_marginLeft="@dimen/sc_mm_24"
    android:background="@drawable/coupon_month_bg">

    <TextView
        android:id="@+id/tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_31"
        android:layout_marginTop="@dimen/sc_mm_24"
        android:text="¥"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_4"
        android:layout_marginTop="@dimen/sc_mm_8"
        android:layout_toRightOf="@+id/tv_rmb"
        android:gravity="top"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_70"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_6"
        android:layout_marginTop="@dimen/sc_mm_24"
        android:layout_marginRight="@dimen/sc_mm_5"
        android:layout_toRightOf="@+id/tv_amount"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_condition"
        android:layout_marginLeft="@dimen/sc_mm_6"
        android:layout_marginRight="@dimen/sc_mm_5"
        android:layout_toRightOf="@+id/tv_amount"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sc_mm_15"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="全品类会员专享券"
        android:textColor="#e29d00"
        android:textSize="@dimen/sc_mm_24" />
</RelativeLayout>