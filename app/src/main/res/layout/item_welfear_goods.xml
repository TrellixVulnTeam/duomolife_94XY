<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_180"
        android:scaleType="centerCrop"/>

    <com.google.android.flexbox.FlexboxLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fbl_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        app:dividerDrawable="@drawable/item_divider_img_red"
        app:showDivider="middle"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_8"
        android:maxLines="1"
        android:text="@string/defaul"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_28"/>
</LinearLayout>