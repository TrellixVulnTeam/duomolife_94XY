<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_104"
    android:paddingLeft="@dimen/sc_mm_30"
    android:paddingRight="@dimen/sc_mm_20"
    android:background="@drawable/border_bottom_line"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/sc_mm_64"
        android:layout_height="@dimen/sc_mm_64"
        android:scaleType="centerCrop" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_22"
        android:text="@string/defaul"
        android:textColor="@color/black"
        android:textSize="@dimen/sc_mm_28" />
</LinearLayout>