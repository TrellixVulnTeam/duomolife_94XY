<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_zero_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_236"
    android:layout_marginLeft="@dimen/sc_mm_26"
    android:layout_marginTop="@dimen/sc_mm_18"
    android:layout_marginRight="@dimen/sc_mm_28"
    android:layout_marginBottom="@dimen/sc_mm_18"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_zero_cover"
        android:layout_width="@dimen/sc_mm_236"
        android:layout_height="@dimen/sc_mm_236"
        android:background="@drawable/load_loading_image"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/sc_mm_30"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_zero_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zero_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zero_name"
            android:layout_marginTop="@dimen/sc_mm_22"
            android:layout_marginRight="@dimen/sc_mm_28"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />

        <TextView
            android:id="@+id/tv_zero_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zero_subtitle"
            android:layout_marginTop="@dimen/sc_mm_30"
            android:text="@string/defaul"
            android:textColor="#FF2A3B"
            android:textSize="@dimen/sc_mm_34"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:id="@+id/tv_zero_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_zero_price"
            android:layout_toRightOf="@+id/tv_zero_price"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zero_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zero_price"
            android:text="@string/limit_quantity"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="@dimen/sc_mm_160"
            android:layout_height="@dimen/sc_mm_46"
            android:layout_below="@+id/tv_zero_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/sc_mm_60"
            android:layout_marginRight="@dimen/sc_mm_28"
            android:background="@drawable/shap_apply_bg"
            android:gravity="center"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />
    </RelativeLayout>
</LinearLayout>