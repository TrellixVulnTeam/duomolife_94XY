<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_integral_lottery"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray_f"
        android:layout_height="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_104">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32"
            android:paddingLeft="@dimen/gap_left"
            android:gravity="center_vertical"
            android:text="积分夺宝"
            android:id="@+id/tv_integral_lottery_rule"
            android:drawableRight="@drawable/attendance_ques"
            android:drawablePadding="@dimen/dimen_10_dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_32"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dimen_5_dp"
            android:paddingRight="@dimen/sc_mm_32"
            android:id="@+id/tv_integral_lottery_award"
            android:drawableRight="@drawable/gray_s_next_icon"
            android:text="我的奖励"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <com.amkj.dmsh.views.recyclerviewpager.RecyclerViewPager
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/sc_mm_26"
        android:id="@+id/rvp_integral_lottery"
        android:layout_height="@dimen/sc_mm_612"
        android:paddingRight="@dimen/sc_mm_38"
        android:layout_marginBottom="@dimen/sc_mm_35"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:rvp_triggerOffset="0.1"
        app:rvp_singlePageFling="true"
        />
</LinearLayout>