<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_account_logout_result"
        android:textColor="@color/text_black_t"
        android:layout_marginTop="@dimen/sc_mm_270"
        android:textSize="@dimen/sc_mm_40"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/sc_mm_24"
        android:text="注销失败"
        android:drawableLeft="@drawable/sel_account_logout_result_status"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sc_mm_32"
        android:layout_marginLeft="@dimen/sc_mm_106"
        android:layout_marginRight="@dimen/sc_mm_106"
        android:textSize="@dimen/sc_mm_28"
        android:textColor="@color/text_black_t"
        android:lineSpacingExtra="5dp"
        android:id="@+id/tv_account_logout_result_reason"
        android:layout_below="@id/tv_account_logout_result"
        android:layout_height="wrap_content" 
        android:maxHeight="@dimen/sc_mm_300"/>
    <TextView
        android:layout_width="@dimen/sc_mm_200"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_login_gray_s"
        android:gravity="center"
        android:text="知道了"
        android:id="@+id/tv_account_logout_result_confirm"
        android:background="@drawable/border_cir_1dp5_gray_white"
        android:textSize="@dimen/sc_mm_34"
        android:layout_marginTop="@dimen/sc_mm_50"
        android:layout_below="@id/tv_account_logout_result_reason"
        android:layout_height="@dimen/sc_mm_80" />
</RelativeLayout>