<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/sc_mm_30"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_integration_details_credits_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="@dimen/sc_mm_20"
        android:src="@drawable/bitmap_sub" />

    <TextView
        android:id="@+id/tv_integration_details_credits_count"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/sc_mm_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_34"
        android:layout_marginRight="@dimen/sc_mm_34"
        android:background="@color/white"
        android:paddingTop="@dimen/sc_mm_10"
        android:paddingBottom="@dimen/sc_mm_10"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_28" />

    <ImageView
        android:id="@+id/img_integration_details_credits_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bitmap_add"
        android:padding="@dimen/sc_mm_20"
         />

</LinearLayout>