<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_quality_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_88"
        android:layout_marginTop="@dimen/sc_mm_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_life_back2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sc_mm_20"
            android:paddingRight="@dimen/sc_mm_20"
            android:src="@drawable/transparent_back"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/sc_mm_32"/>

        <ImageView
            android:id="@+id/iv_img_share2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/sc_mm_20"
            android:paddingRight="@dimen/sc_mm_20"
            android:src="@drawable/transparent_share"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_88"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_life_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/sc_mm_40"
                android:paddingRight="@dimen/sc_mm_20"
                android:src="@drawable/common_back_btn_nor"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/sc_mm_32"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_32"/>

            <ImageView
                android:id="@+id/iv_img_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/sc_mm_20"
                android:paddingRight="@dimen/sc_mm_34"
                android:src="@drawable/common_share_btn_nor"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

