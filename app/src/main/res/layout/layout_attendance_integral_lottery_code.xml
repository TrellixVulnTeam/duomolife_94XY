<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/translucence"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="540px"
        android:layout_centerInParent="true"
        android:layout_height="350px"
        android:gravity="center_vertical"
        android:divider="@drawable/divider_ll_0_5_dp"
        android:showDividers="middle"
        android:background="@drawable/border_cir_7dp_bg_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingBottom="30px"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_integral_lottery_title"
                android:textSize="34px"
                android:paddingLeft="50px"
                android:text="我的夺宝码"
                android:paddingRight="40px"
                android:layout_marginTop="36px"
                android:textColor="@color/text_black_t"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/tv_integral_lottery_title"
                android:layout_marginLeft="50px"
                android:layout_marginRight="40px"
                android:id="@+id/rv_integral_lottery_code"
                android:layout_centerInParent="true"
                android:layout_marginTop="26px"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:divider="@drawable/divider_ll_0_5_dp"
            android:showDividers="middle"
            android:layout_height="88px" >
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:id="@+id/tv_integral_lottery_history_award"
                android:textSize="34px"
                android:gravity="center"
                android:text="往期中奖"
                android:textColor="@color/text_login_gray_s"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:id="@+id/tv_integral_lottery_invite"
                android:textSize="32px"
                android:gravity="center"
                android:text="邀请好友"
                android:textColor="@color/text_login_blue_z"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>