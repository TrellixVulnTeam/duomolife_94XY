<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/sc_mm_60"
        android:id="@+id/iv_attendance_avatar"
        android:layout_height="@dimen/sc_mm_60"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/sc_mm_24"
        android:textSize="@dimen/sc_mm_24"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/tv_attendance_nick_name"
        android:textColor="@color/text_black_t"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_30"
        android:textSize="@dimen/sc_mm_24"
        android:id="@+id/tv_attendance_score"
        android:layout_marginRight="@dimen/sc_mm_26"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/text_black_t"
        android:layout_height="wrap_content" />
</LinearLayout>