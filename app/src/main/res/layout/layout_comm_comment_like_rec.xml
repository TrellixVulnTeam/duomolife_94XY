<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/text_login_gray_s"
        android:id="@+id/tv_comm_comment_receive"
        android:clickable="true"
        android:text="回复  ·"
        android:textSize="24px"
        android:paddingRight="20px"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="93px"
        android:id="@+id/tv_comm_comment_like"
        android:textSize="24px"
        android:textColor="@color/text_login_gray_s"
        android:clickable="true"
        android:drawableLeft="@drawable/sel_art_like_heart"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:gravity="center_vertical"
        android:text="赞"
        android:layout_height="wrap_content" />
</LinearLayout>