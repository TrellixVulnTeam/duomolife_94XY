<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_68"
    android:paddingLeft="@dimen/sc_mm_22"
    android:paddingRight="@dimen/sc_mm_22"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/tv_show_text_all_comment"
        android:gravity="center_vertical"
        android:textSize="@dimen/sc_mm_28"
        android:text="全部评论" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/view_btn_nor"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textColor="@color/text_time"
        android:textSize="@dimen/sc_mm_28" />
<!--android:layout_marginLeft="@dimen/sc_mm_22"-->
    <TextView
        android:id="@+id/tv_article_collect_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:drawableLeft="@drawable/selector_article_list_liked"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/sc_mm_28"
        android:textColor="@color/text_time" />

    <TextView
        android:id="@+id/tv_article_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/sc_mm_22"
        android:drawableLeft="@drawable/bubble_btn_nor"
        android:drawablePadding="5dp"
        android:textSize="@dimen/sc_mm_28"
        android:gravity="center_vertical"
        android:textColor="@color/text_time" />
</LinearLayout>
