<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:visibility="gone"
              android:id="@+id/ll_communal_activity_topic_tag"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/sc_mm_26"
              android:paddingTop="@dimen/sc_mm_40"
              android:paddingRight="@dimen/sc_mm_24">

    <View
        android:id="@+id/blank"
        android:layout_width="@dimen/sc_mm_54"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_communal_activity_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_circle_two_pink_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/sc_mm_8"
        android:paddingTop="@dimen/sc_mm_5"
        android:paddingRight="@dimen/sc_mm_8"
        android:paddingBottom="@dimen/sc_mm_5"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_24"/>

    <LinearLayout
        android:id="@+id/ll_communal_activity_tag_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_14"
        android:layout_toRightOf="@id/tv_communal_activity_tag"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_communal_activity_tag_rule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:textColor="@color/text_pink_red"
            android:textSize="@dimen/sc_mm_24"/>

        <TextView
            android:id="@+id/tv_communal_activity_tag_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_5"
            android:drawableRight="@drawable/next_pink_icon"
            android:drawablePadding="@dimen/dimen_5_dp"
            android:gravity="center"
            android:lines="1"
            android:paddingTop="@dimen/sc_mm_5"
            android:paddingBottom="@dimen/sc_mm_5"
            android:textColor="@color/text_pink_red"
            android:textSize="@dimen/sc_mm_24"/>
    </LinearLayout>
</LinearLayout>