<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_article_details_bg"
        app:layout_auto_basewidth="height"
        android:layout_width="match_parent"
        android:layout_height="403px"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="24px"
        android:orientation="vertical">

        <emojicon.EmojiconTextView
            android:id="@+id/tv_article_details_title"
            app:emojiconSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:textColor="@color/text_black_t"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_article_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="26px"
                android:gravity="center_vertical"
                android:textColor="@color/home_text_color"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_article_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="26px"
                android:paddingTop="16px"
                android:textColor="@color/home_text_color"
                android:textSize="22px" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>