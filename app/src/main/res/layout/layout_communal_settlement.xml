<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_communal_settlement"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_98"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/check_box_all_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/sel_check_box_shop_car"
            android:drawablePadding="@dimen/dimen_10_dp"
            android:gravity="center"
            android:paddingLeft="@dimen/sc_mm_24"
            android:paddingRight="@dimen/sc_mm_8"
            android:text="全选"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/sc_mm_46"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="合计:"
                android:id="@+id/tv_set_total_text"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_communal_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_toRightOf="@id/tv_set_total_text"
                android:textColor="@color/text_b_red_color"
                android:textSize="@dimen/sc_mm_28" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_10"
                android:id="@+id/tv_settlement_dis_car_price"
                android:textColor="@color/text_normal_red"
                android:textSize="@dimen/sc_mm_22"
                android:visibility="gone"
                android:layout_below="@id/tv_set_total_text"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_communal_buy_or_count"
            android:layout_width="@dimen/sc_mm_250"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/text_normal_red"

            android:gravity="center"
            android:text="结算"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sc_mm_32" />
    </RelativeLayout>
</LinearLayout>