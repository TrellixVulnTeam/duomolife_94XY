<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_show_communal_time_status"
        android:layout_width="wrap_content"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_login_gray_s"
        android:text="距结束"
        android:textSize="28px"
        android:layout_height="wrap_content" />
    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/ct_time_communal_show_bg"
        android:layout_width="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:isHideTimeBackground="false"
        app:isShowMillisecond="false"
        app:isShowDay="true"
        app:suffixDay="天"
        app:suffixLRMargin="@dimen/dimen_5_dp"
        app:isShowHour="true"
        app:suffixHour=":"
        app:isShowMinute="true"
        app:suffixMinute=":"
        app:isShowSecond="true"
        app:suffixGravity="center"
        app:suffixTextColor="@color/home_text_color"
        app:suffixTextSize="28px"
        app:timeBgRadius="@dimen/dimen_5_dp"
        app:timeTextColor="@color/white"
        app:timeTextSize="28px"/>
</LinearLayout>