<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_communal_multi_time"
    android:layout_width="match_parent"
    android:layout_height="415px"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="#f9f9f9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_click_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#f9f9f9"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/gap_left"
            android:text="取消"
            android:textColor="#408ed6"
            android:textSize="32px" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f9f9f9" />

        <TextView
            android:id="@+id/tv_time_click_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#f9f9f9"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/gap_right"
            android:text="确定"
            android:textColor="#408ed6"
            android:textSize="32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <com.amkj.dmsh.address.widget.WheelView
            android:id="@+id/id_one_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.amkj.dmsh.address.widget.WheelView
            android:id="@+id/id_two_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.amkj.dmsh.address.widget.WheelView
            android:id="@+id/id_three_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>