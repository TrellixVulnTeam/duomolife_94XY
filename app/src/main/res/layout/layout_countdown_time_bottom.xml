<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_countdown_time_bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/sc_mm_20"
              android:background="@color/white"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_30"
        android:gravity="center_vertical"
        android:text="距结束"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_26"/>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/cv_countdownTime_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_10"
        app:isHideTimeBackground="false"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="false"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:suffixDay="天 "
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:suffixTextColor="@color/text_black_t"
        app:timeBgDivisionLineSize="@dimen/sc_mm_0"
        app:timeTextColor="@color/text_normal_red"/>
</LinearLayout>