<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/group_uncomplete_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sc_mm_40"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_gp_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_remain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sc_mm_24"
        android:text="@string/defaul"
        android:textColor="@color/text_normal_red"
        android:textSize="@dimen/sc_mm_28"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/sc_mm_350"
        android:layout_height="@dimen/sc_mm_350"
        android:layout_below="@+id/tv_gp_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="@dimen/sc_mm_220"
        android:layout_height="@dimen/sc_mm_35"
        android:layout_below="@+id/tv_gp_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sc_mm_363"
        android:layout_marginBottom="@dimen/sc_mm_28"
        android:background="@drawable/shap_group_end_time_bg"
        android:gravity="center"
        android:text="@string/defaul"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_24" />

    <TextView
        android:id="@+id/tv_invate_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_80"
        android:layout_below="@+id/tv_end_time"
        android:layout_marginLeft="@dimen/sc_mm_45"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginRight="@dimen/sc_mm_45"
        android:layout_marginBottom="@dimen/sc_mm_24"
        android:background="@drawable/shap_group_invate_bg"
        android:gravity="center"
        android:text="@string/invate_group_now"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_34"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_invate_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_24"
        android:text="此团只能邀请新用户参加哦~"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_26"
        android:visibility="gone" />
</RelativeLayout>

