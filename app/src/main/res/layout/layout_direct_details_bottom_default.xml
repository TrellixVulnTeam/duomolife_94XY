<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/divider_ll_10dp_gray_bg"
    android:showDividers="beginning|middle"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:id="@+id/rv_indent_details"
        android:scrollbars="none"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/gap_left"
        android:gravity="center_vertical"
        android:layout_height="170px">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="24px"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_indent_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:lines="1"
                android:longClickable="true"
                android:layout_marginRight="24px"
                android:textColor="@color/text_login_gray_s"
                android:textSize="26px" />
            <include layout="@layout/layout_communal_copy_text_button"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_indent_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/text_login_gray_s"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_indent_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/text_login_gray_s"
            android:textSize="26px" />
    </LinearLayout>

</LinearLayout>