<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/item_divider_ten_dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:showDividers="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_light_blue_e"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/sc_mm_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_indent_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaul"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_30" />

            <TextView
                android:id="@+id/tv_package_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_indent_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_16"
            android:gravity="center"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_countdownTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_16"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_28"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/layout_indent_detail_express_info" />

    <include layout="@layout/layout_indent_detail_address_info" />
</LinearLayout>

