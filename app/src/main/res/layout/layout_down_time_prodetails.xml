<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pro_time_detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:drawableLeft="@drawable/clock_btn_nor"
        android:drawablePadding="@dimen/dimen_6_dp"
        android:gravity="center_vertical|right"
        android:text="距结束"
        android:textColor="@color/text_login_gray_s"
        android:textSize="22px" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/ct_pro_show_time_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16px"
        android:layout_toRightOf="@id/tv_pro_time_detail_status"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="false"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:suffixDay=":"
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:suffixTextColor="@color/ct_deep_red_bg"
        app:suffixTextSize="22px"
        app:timeTextColor="@color/ct_deep_red_bg"
        app:timeTextSize="22px" />
</RelativeLayout>