<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_15"
        android:layout_marginRight="@dimen/sc_mm_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/sc_mm_53"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="@dimen/sc_mm_105"
            android:layout_height="@dimen/sc_mm_105">

            <ImageView
                android:id="@+id/iv_dm_gp_open_ava"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/dm_gp_join"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/sc_mm_15"
                android:background="@color/color_blue_reply_com"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_22"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_dm_gp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:text="@string/defaul"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_22"/>
</LinearLayout>