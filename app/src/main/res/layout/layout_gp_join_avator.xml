<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/sc_mm_15"
              android:layout_marginRight="@dimen/sc_mm_15"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dm_gp_open_ava"
        android:layout_width="@dimen/sc_mm_100"
        android:layout_height="@dimen/sc_mm_100"
        android:scaleType="fitCenter"
        android:src="@drawable/dm_gp_join"/>

    <TextView
        android:id="@+id/tv_dm_gp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_24"/>
</LinearLayout>