<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dm_gp_open_ava"
        android:layout_width="@dimen/sc_mm_80"
        android:layout_height="@dimen/sc_mm_80"
        android:scaleType="fitCenter"
        android:src="@drawable/dm_gp_join"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sc_mm_24"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:textColor="@color/text_login_gray_s"
        android:id="@+id/tv_dm_gp_name"
        android:layout_height="wrap_content" />
</LinearLayout>