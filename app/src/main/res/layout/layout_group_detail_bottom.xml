<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_group_detail_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_98"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_group_home"
        android:layout_width="@dimen/sc_mm_124"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/group_home"
            android:drawablePadding="@dimen/sc_mm_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="主页"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_22"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alone_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_light_red_un_gray"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sp_details_ol_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/defaul"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_34"/>

        <TextView
            android:id="@+id/tv_sp_details_ol_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="单独购买"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_nor_red_un_gray"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sp_details_join_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/defaul"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_34"/>

        <TextView
            android:id="@+id/tv_sp_details_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="立即开团"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30"/>
    </LinearLayout>
</LinearLayout>