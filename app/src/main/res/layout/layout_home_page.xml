<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/tb_tool_home"
    android:minHeight="@dimen/sc_mm_108"
    app:layout_collapseMode="pin"
    app:contentInsetStart="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/gap_left"
        android:gravity="center_vertical"
        android:layout_height="@dimen/sc_mm_88">
        <TextView
            android:paddingLeft="@dimen/sc_mm_20"
            android:layout_width="@dimen/sc_mm_0"
            android:layout_weight="1"
            android:id="@+id/tv_home_search"
            android:textSize="@dimen/sc_mm_24"
            android:drawableLeft="@drawable/search_light_gray_icon"
            android:drawablePadding="@dimen/sc_mm_8"
            android:background="@drawable/border_civ_3dp_light_gray"
            android:gravity="center_vertical"
            android:text="搜索美好生活"
            android:textColor="@color/text_gray_hint_n"
            android:layout_height="@dimen/sc_mm_56" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/sc_mm_18"
            android:layout_marginLeft="@dimen/sc_mm_31"
            android:id="@+id/fra_home_message_total"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/sc_mm_64"
                android:id="@+id/iv_home_message_total"
                android:layout_height="@dimen/sc_mm_54"
                android:paddingRight="@dimen/sc_mm_12"
                android:paddingTop="@dimen/sc_mm_12"
                android:src="@drawable/home_mes_icon"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>