<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_indent_address_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_top_line"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_30"
    android:paddingTop="@dimen/sc_mm_35"
    android:paddingRight="@dimen/sc_mm_30"
    android:paddingBottom="@dimen/sc_mm_35">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_consignee_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_48"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_change_address"
            android:layout_width="@dimen/sc_mm_98"
            android:layout_height="@dimen/sc_mm_40"
            android:layout_marginLeft="@dimen/sc_mm_45"
            android:background="@drawable/border_circle_three_gray_white"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/sel_font_gray_b_gray"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_indent_details_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_27"
        android:layout_marginRight="@dimen/sc_mm_76"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_indent_user_lea_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_28"
        android:background="@color/light_gray_f"
        android:paddingLeft="@dimen/sc_mm_10"
        android:paddingTop="@dimen/sc_mm_8"
        android:paddingRight="@dimen/sc_mm_10"
        android:paddingBottom="@dimen/sc_mm_8"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24" />
</LinearLayout>