<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical|right"
    android:paddingTop="24px"
    android:paddingBottom="26px">

    <TextView
        android:id="@+id/tv_intent_count_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_black_t"
        android:textSize="28px" />
    <include
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_marginRight="@dimen/gap_right"
        layout="@layout/layout_communal_indent_bottom"/>
</LinearLayout>