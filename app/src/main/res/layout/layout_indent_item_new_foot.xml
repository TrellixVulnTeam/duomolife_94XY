<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_24"
        android:layout_marginRight="@dimen/sc_mm_30"
        android:layout_marginBottom="@dimen/sc_mm_26"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_intent_deposit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_intent_count_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_30"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />
    </LinearLayout>


    <com.amkj.dmsh.views.MainButtonView
        android:id="@+id/main_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sc_mm_20" />

    <LinearLayout
        android:id="@+id/ll_express_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_28"
        android:layout_marginRight="@dimen/sc_mm_28"
        android:layout_marginBottom="@dimen/sc_mm_12"
        android:background="@color/light_gray_f"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sc_mm_10"
        android:paddingTop="@dimen/sc_mm_8"
        android:paddingRight="@dimen/sc_mm_10"
        android:paddingBottom="@dimen/sc_mm_8"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/sc_mm_32"
            android:layout_height="@dimen/sc_mm_26"
            android:src="@drawable/wuliu" />

        <TextView
            android:id="@+id/tv_express_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_18"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_26" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sc_mm_90"
        android:layout_marginBottom="@dimen/sc_mm_12"
        android:textColor="@color/text_login_blue_z"
        android:textSize="@dimen/sc_mm_22"
        android:visibility="gone" />
</LinearLayout>