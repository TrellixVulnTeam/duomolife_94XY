<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_cir_7dp_str_gray_c_bg_white">

    <LinearLayout
        android:layout_width="@dimen/sc_mm_540"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:divider="@drawable/divider_ll_0_5_dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_160"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_pay_ali"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sc_mm_104"

                android:paddingLeft="@dimen/sc_mm_50"
                android:paddingRight="@dimen/sc_mm_50"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pay_icon_ali"
                    android:layout_width="@dimen/sc_mm_60"
                    android:layout_height="@dimen/sc_mm_60"
                    android:scaleType="fitXY"
                    android:src="@drawable/alipay"
                     />

                <TextView
                    android:id="@+id/tv_pay_text_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_25"

                    android:text="支付宝"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/text_gray_c"
                android:layout_below="@id/ll_pay_ali"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:id="@+id/ll_pay_we_chat"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sc_mm_104"
                android:paddingLeft="@dimen/sc_mm_50"
                android:paddingRight="@dimen/sc_mm_50"
                android:layout_alignLeft="@id/ll_pay_ali"
                android:layout_below="@id/ll_pay_ali"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pay_icon_we_chat"
                    android:layout_width="@dimen/sc_mm_60"
                    android:layout_height="@dimen/sc_mm_60"
                    android:scaleType="fitXY"
                    android:src="@drawable/wechat_pay"
                     />

                <TextView
                    android:id="@+id/tv_pay_text_we_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sc_mm_25"

                    android:text="微信"
                    android:textColor="@color/text_black_t"
                    android:textSize="@dimen/sc_mm_28" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pay_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_104"

            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_28" />
    </LinearLayout>
</RelativeLayout>