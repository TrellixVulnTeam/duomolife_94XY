<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/transparent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/sc_mm_240"
        android:orientation="vertical"
        android:background = "@drawable/indent_pop_bg"
        android:paddingTop="@dimen/sc_mm_18"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/sc_mm_24"
            android:gravity="center_vertical"

            android:id="@+id/ll_indent_pop_service"
            android:orientation="horizontal"
            android:paddingRight="@dimen/gap_right"
            android:layout_height="@dimen/sc_mm_80">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/icon_service"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_40"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_30"
                android:text="客服"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#999999"
            android:layout_height="@dimen/dimen_0p5_dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/sc_mm_24"
            android:id="@+id/ll_indent_pop_mes"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/gap_right"
            android:layout_height="@dimen/sc_mm_80">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/icon_mes"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_40"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_30"
                android:text="消息"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#999999"
            android:layout_height="@dimen/dimen_0p5_dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/sc_mm_24"

            android:id="@+id/ll_indent_pop_quality"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/gap_right"
            android:layout_height="@dimen/sc_mm_80">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/icon_quality"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_40"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_30"
                android:text="良品"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#999999"
            android:layout_height="@dimen/dimen_0p5_dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/sc_mm_24"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:id="@+id/ll_indent_pop_mine"
            android:paddingRight="@dimen/gap_right"
            android:layout_height="@dimen/sc_mm_80">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/icon_mine"
                android:scaleType="centerInside"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_40"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_30"
                android:text="我"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>