<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_refund_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_left"
        android:text="收货地址："
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_repair_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/gap_right"
        android:layout_toRightOf="@id/tv_refund_add"
        android:lineSpacingExtra="@dimen/sc_mm_8"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/gap_right"
        android:layout_below="@id/tv_repair_address"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:layout_toRightOf="@id/tv_refund_add"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repair_consignee_phone"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/sc_mm_12"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_28" />

        <include layout="@layout/layout_communal_copy_text_button" />
    </LinearLayout>
</RelativeLayout>