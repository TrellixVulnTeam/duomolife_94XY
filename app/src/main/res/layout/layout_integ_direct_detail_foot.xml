<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|right"
    android:divider="@drawable/divider_ll_10dp_gray_bg"
    android:showDividers="beginning"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/border_bottom_line"
        android:id="@+id/rv_integral_indent_price"
        android:scrollbars="none"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="30px"
        android:paddingLeft="@dimen/gap_left"
        android:paddingRight="@dimen/gap_right"
        android:paddingTop="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="24px"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_integ_indent_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_weight="1"
                android:lines="1"
                android:longClickable="true"
                android:layout_marginRight="24px"
                android:textColor="@color/text_login_gray_s"
                android:textSize="26px" />
            <include layout="@layout/layout_communal_copy_text_button"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_integ_indent_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:layout_marginTop="16px"
            android:textColor="@color/text_login_gray_s"
            android:textSize="26px" />
    </LinearLayout>
</LinearLayout>