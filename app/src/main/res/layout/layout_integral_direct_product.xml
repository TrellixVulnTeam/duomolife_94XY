<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="30px"
    android:paddingTop="30px">

    <ImageView
        android:id="@+id/iv_integral_indent_product_image"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="@dimen/gap_left"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gap_left"
        android:paddingRight="@dimen/gap_right">

        <TextView
            android:id="@+id/tv_integral_indent_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_black_t"
            android:textSize="28px" />
        <TextView
            android:id="@+id/tv_integral_indent_sku_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_below="@id/tv_integral_indent_product_name"
            android:textColor="@color/text_login_gray_s"
            android:textSize="22px" />
        <TextView
            android:id="@+id/tv_integral_indent_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_below="@id/tv_integral_indent_product_name"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_black_t"
            android:textSize="28px" />
        <TextView
            android:id="@+id/tv_integral_indent_product_price"
            android:layout_marginTop="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_integral_indent_sku_value"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_black_t"
            android:textSize="28px" />
    </RelativeLayout>
</LinearLayout>