<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_lottery_end_prize"
    android:gravity="center_vertical"
    android:layout_gravity="center">
    <include layout="@layout/layout_integral_lottery_prize"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sc_mm_40"
        android:id="@+id/rel_integral_lottery_prize"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/yellow_bg_fsae"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sc_mm_34"
            android:text="去领取"
            android:paddingRight="@dimen/sc_mm_80"
            android:id="@+id/tv_integral_lottery_get_prize"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sc_mm_24"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray_hint_n"
            android:drawableRight="@drawable/att_integ_next"
            android:text="超过48小时未领取视为自动放弃"
            android:drawablePadding="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_integral_lottery_get_prize"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>