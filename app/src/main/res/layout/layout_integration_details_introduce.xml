<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/sc_mm_30"
    android:paddingRight="@dimen/sc_mm_30"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:id="@+id/tv_integral_introduce_pro_n"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/sc_mm_40"
        android:layout_marginBottom="@dimen/sc_mm_42"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_integral_introduce_price"
            android:textSize="@dimen/sc_mm_24"
            android:minHeight="@dimen/sc_mm_40"
            android:gravity="bottom"
            android:textColor="@color/text_b_red_color"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/sc_mm_46"
            android:paddingRight="@dimen/gap_right"
            android:layout_width="wrap_content"
            android:id="@+id/tv_integral_introduce_mk"
            android:textSize="@dimen/sc_mm_24"
            android:textColor="@color/text_gray_hint_n"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>