<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_88"
    android:background="@drawable/border_bottom_line"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_life_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/common_back_btn_nor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/gap_left"
        android:paddingRight="@dimen/gap_right"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_32"/>

    <TextView
        android:id="@+id/tv_find_release_topic"
        android:layout_width="@dimen/sc_mm_100"
        android:layout_height="@dimen/sc_mm_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/sc_mm_30"
        android:background="@drawable/sel_release_blue"
        android:gravity="center"
        android:text="@string/release"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_28"/>
</RelativeLayout>
