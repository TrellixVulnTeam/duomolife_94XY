<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/item_divider_five_dp"
              android:orientation="vertical"
              android:showDividers="end">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_new_user_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/newuser_top_img"/>

        <TextView
            android:id="@+id/tv_new_user_get_coupon"
            android:layout_width="@dimen/sc_mm_420"
            android:layout_height="@dimen/sc_mm_85"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/sc_mm_108"
            android:background="@drawable/newuser_take_btn"
            android:gravity="center"
            android:text="立即领取"
            android:textColor="@color/text_normal_red"
            android:textSize="@dimen/sc_mm_34"/>
    </FrameLayout>
</LinearLayout>