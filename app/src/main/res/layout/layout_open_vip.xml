<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_open_vip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_96"
        android:layout_marginLeft="@dimen/sc_mm_25"
        android:layout_marginTop="@dimen/sc_mm_22"
        android:layout_marginRight="@dimen/sc_mm_25"
        android:layout_marginBottom="@dimen/sc_mm_22"
        android:background="@drawable/yellow_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaul"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_32"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="@dimen/sc_mm_15"
                android:id="@+id/tv_vip_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_32"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时抢购"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>
</LinearLayout>