<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/item_divider_five_gray_f"
    android:orientation="vertical"
    android:showDividers="beginning"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_commnet_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/sc_mm_30"
        android:text="@string/comment"
        android:textColor="@color/text_black_t"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="@color/text_color_e_s"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_more_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sc_mm_30"
        android:text="查看更多评论"
        android:textColor="@color/text_login_blue_z"
        android:textSize="@dimen/sc_mm_28"/>
</LinearLayout>
