<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_88"
    android:background="@drawable/border_bottom_line">

    <ImageView
        android:id="@+id/tv_life_back"
        android:layout_width="@dimen/sc_mm_18"
        android:layout_height="@dimen/sc_mm_34"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_36"
        android:src="@drawable/back"/>

    <LinearLayout
        android:id="@+id/ll_head_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sc_mm_50"
        android:layout_marginRight="@dimen/sc_mm_113"
        android:layout_toRightOf="@+id/tv_life_back"
        android:alpha="0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head2"
            android:layout_width="@dimen/sc_mm_70"
            android:layout_height="@dimen/sc_mm_70"
            android:src="@drawable/default_ava_img"/>


        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/tv_user_name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_22"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32"
            app:emojiconSize="14sp"/>

        <TextView
            android:id="@+id/tv_follow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_img_share"
            android:background="@drawable/shap_follow_bg"
            android:gravity="center"
            android:text="@string/follow"
            android:textColor="@color/sel_follow"
            android:textSize="@dimen/sc_mm_26"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_img_share"
        android:layout_width="@dimen/sc_mm_40"
        android:layout_height="@dimen/sc_mm_40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sc_mm_39"
        android:layout_marginRight="@dimen/sc_mm_34"
        android:src="@drawable/share_post"/>
</RelativeLayout>