<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_present"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sc_mm_26"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="@dimen/sc_mm_80"
        android:layout_height="@dimen/sc_mm_80">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_yel_f_s_present"
            android:gravity="center"
            android:text="赠品"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_22"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/sc_mm_26"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_24"/>
</LinearLayout>