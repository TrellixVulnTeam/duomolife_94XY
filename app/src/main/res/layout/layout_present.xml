<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_present"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    android:orientation="horizontal"
    android:padding="@dimen/sc_mm_26">

    <RelativeLayout
        android:layout_width="@dimen/sc_mm_110"
        android:layout_height="@dimen/sc_mm_110">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_yel_f_s_present"
            android:gravity="center"
            android:text="赠品"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_22" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/sc_mm_26"
        android:paddingRight="@dimen/sc_mm_26"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:text="×1"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />
</LinearLayout>