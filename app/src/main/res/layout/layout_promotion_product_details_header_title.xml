<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_top_5dp_gray">

    <View
        android:id="@+id/v_red"
        android:layout_width="6px"
        android:layout_marginLeft="@dimen/gap_left"
        android:layout_height="34px"
        android:layout_centerVertical="true"
        android:background="@color/text_normal_red" />

    <TextView
        android:id="@+id/tv_communal_red_column_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18px"
        android:layout_toRightOf="@id/v_red"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_t"
        android:textSize="28px" />
</RelativeLayout>