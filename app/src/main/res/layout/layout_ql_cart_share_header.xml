<?xml version="1.0" encoding="utf-8"?>
<com.amkj.dmsh.views.autoviews.AutoToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88px"
    android:id="@+id/tl_quality_bar"
    android:background="@drawable/sel_bg_border_gray_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_life_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:drawableLeft="@drawable/common_back_btn_nor"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/gap_left"
            android:paddingRight="26px"
            android:textColor="@color/home_text_color"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/home_text_color"
            android:textSize="32px"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:id="@+id/fl_header_service"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_img_service"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="24px"
                android:paddingLeft="@dimen/gap_left"
                android:src="@drawable/service_gray" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_img_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="26px"
            android:layout_toLeftOf="@id/fl_header_service"
            android:clickable="true"
            android:paddingLeft="@dimen/gap_left"
            android:src="@drawable/common_share_btn_nor" />

    </RelativeLayout>
</com.amkj.dmsh.views.autoviews.AutoToolbar>