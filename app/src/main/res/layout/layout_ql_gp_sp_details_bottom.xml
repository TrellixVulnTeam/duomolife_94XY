<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_98"
    android:divider="@drawable/divider_ll_1dp_red"
    android:id="@+id/ll_gp_detail_bottom"
    android:showDividers="middle"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_alone_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_light_red_un_gray"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:id="@+id/tv_sp_details_ol_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/sc_mm_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />

        <TextView
            android:maxLines="1"
            android:id="@+id/tv_sp_details_ol_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="单独购买"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:id="@+id/ll_group_buy"
        android:background="@drawable/sel_nor_red_un_gray"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sp_details_join_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/sc_mm_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_24" />

        <TextView
            android:id="@+id/tv_sp_details_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30" />
    </LinearLayout>
</LinearLayout>