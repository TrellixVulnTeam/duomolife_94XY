<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sc_mm_96"
                android:background="@color/text_normal_red"
                android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_gp_sp_per_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sc_mm_30"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:text="@string/defaul"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_30"/>

    <TextView
        android:id="@+id/tv_gp_sp_per_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_gp_sp_per_count"
        android:layout_toRightOf="@+id/tv_gp_sp_per_count"
        android:text="@string/defaul"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_48"/>

    <TextView
        android:id="@+id/tv_gp_sp_nor_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sc_mm_50"
        android:layout_toRightOf="@+id/tv_gp_sp_per_price"
        android:text="@string/defaul"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_30"/>

    <TextView
        android:layout_width="@dimen/sc_mm_90"
        android:layout_height="@dimen/sc_mm_42"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/sc_mm_30"
        android:background="@drawable/shap_postage_bg"
        android:gravity="center"
        android:text="包邮"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_30"/>
</RelativeLayout>