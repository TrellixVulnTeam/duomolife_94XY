<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_normal_red"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/sc_mm_96"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_gp_sp_per_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sc_mm_30"
            android:layout_toRightOf="@+id/tv_gp_sp_per_count"
            android:text="@string/defaul"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30" />

        <TextView
            android:id="@+id/tv_gp_sp_nor_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sc_mm_40"
            android:layout_toRightOf="@+id/tv_gp_sp_per_price"
            android:ellipsize="end"
            android:text="@string/defaul"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_free_postage"
            android:layout_width="@dimen/sc_mm_90"
            android:layout_height="@dimen/sc_mm_42"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sc_mm_30"
            android:background="@drawable/shap_postage_bg"
            android:gravity="center"
            android:text="包邮"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_30" />

        <include
            layout="@layout/layout_shopdetails_starttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
