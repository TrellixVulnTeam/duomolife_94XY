<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_indent_address_default"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_165"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/gap_left"
    android:paddingRight="@dimen/gap_right">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/address_icon"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/sc_mm_24"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_consignee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />
            <TextView
                android:id="@+id/tv_consignee_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_46"
                android:inputType="number"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_indent_details_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:layout_marginTop="@dimen/sc_mm_34"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_26"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_skip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_marginLeft="@dimen/sc_mm_16"
        android:src="@drawable/right_btn_nor" />
</LinearLayout>