<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/item_divider_gray_f_one_px"
    android:orientation="vertical"
    android:showDividers="beginning">

    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/shap_middle_divider_20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_gray_ten_line"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sc_mm_28"
        android:paddingTop="@dimen/sc_mm_35"
        android:paddingRight="@dimen/sc_mm_28"
        android:paddingBottom="@dimen/sc_mm_60"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/ll_refund_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款类型"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_refund_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_39"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:longClickable="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_refund_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_39"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:longClickable="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_refund_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_39"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:longClickable="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_apply_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请时间"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_39"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:longClickable="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款编号"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_refund_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_39"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:longClickable="true"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_28" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
