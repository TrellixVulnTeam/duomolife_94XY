<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_refund_logistic_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_line"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sc_mm_28"
    android:paddingTop="@dimen/sc_mm_37"
    android:paddingRight="@dimen/sc_mm_28"
    android:paddingBottom="@dimen/sc_mm_30">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退货地址"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_32" />

    <TextView
        android:id="@+id/tv_repair_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:text="@string/defaul"
        android:textColor="@color/text_login_gray_s"
        android:textSize="@dimen/sc_mm_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_20"
        android:layout_marginBottom="@dimen/sc_mm_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/sc_mm_230"
            android:ellipsize="end"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_repair_consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_64"
            android:ellipsize="end"
            android:maxWidth="@dimen/sc_mm_230"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_copy_text"
            style="@style/copy_text"
            android:layout_marginLeft="@dimen/sc_mm_64"
            android:text="复制" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:text="物流公司"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <TextView
        android:id="@+id/tv_refund_logistic_sel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_60"
        android:background="@drawable/border_civ_3dp_light_gray"
        android:drawableLeft="@drawable/sel_bt_top_bot_icon"
        android:drawablePadding="@dimen/sc_mm_15"
        android:gravity="center_vertical"
        android:hint="请选择物流公司"
        android:paddingLeft="@dimen/sc_mm_15"
        android:paddingRight="@dimen/gap_right"
        android:textColor="@color/text_login_gray_s"
        android:textColorHint="@color/text_gray_c"
        android:textSize="@dimen/sc_mm_28"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_refund_logistic_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="@string/defaul"
        android:textColor="@color/text_login_gray_s"
        android:textColorHint="@color/text_gray_c"
        android:textSize="@dimen/sc_mm_28"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_30"
        android:layout_marginBottom="@dimen/sc_mm_20"
        android:text="物流单号"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28" />

    <EditText
        android:id="@+id/et_refund_logistic_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_60"
        android:background="@drawable/border_civ_3dp_light_gray"
        android:gravity="center_vertical"
        android:hint="请输入退货物流单号"
        android:paddingLeft="@dimen/sc_mm_15"
        android:paddingRight="@dimen/gap_right"
        android:textColor="@color/text_login_gray_s"
        android:textColorHint="@color/text_gray_c"
        android:textSize="@dimen/sc_mm_28"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_refund_logistic_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_refund_logistic_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textColorHint="@color/text_gray_c"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_copy_logistic_no"
            style="@style/copy_text"
            android:layout_marginLeft="@dimen/sc_mm_60"
            android:text="复制" />
    </LinearLayout>
</LinearLayout>