<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_del_shop_car"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_98"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <CheckBox
        android:id="@+id/check_box_all_del"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/gap_left"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:button="@null"
        android:drawableLeft="@drawable/sel_check_box_shop_car"
        android:drawablePadding="@dimen/dimen_10_dp"
        android:gravity="center"
        android:paddingRight="@dimen/sc_mm_8"
        android:text="全选"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_28"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_shop_car_del"
        android:layout_width="@dimen/sc_mm_240"
        android:layout_height="@dimen/sc_mm_68"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/border_del_circel_one_red"

        android:gravity="center"
        android:text="删除"
        android:layout_marginRight="@dimen/gap_right"
        android:textColor="@color/text_red_color"
        android:textSize="@dimen/sc_mm_32" />
</RelativeLayout>