<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top_start_time"
    android:layout_width="@dimen/sc_mm_300"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@color/text_color_e_s"
    android:gravity="center"

    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/sc_mm_210"
        android:layout_height="@dimen/sc_mm_36"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shap_circle_gray_18px"
        android:gravity="center"
        android:text="活动未开始"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:gravity="center"
        android:text="@string/defaul"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_26" />
</LinearLayout>