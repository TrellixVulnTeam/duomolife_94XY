<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98px"
    android:background="@drawable/border_top_5dp_gray"
    android:paddingTop="@dimen/dimen_5_dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time_product_details_service"
        android:layout_width="125px"
        android:paddingTop="17px"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/service_gray"
        android:clickable="true"
        android:gravity="center"
        android:text="客服"
        android:textColor="@color/home_text_color"
        android:textSize="22px" />

    <TextView
        android:id="@+id/tv_time_product_details_warm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_light_red_un_gray"
        android:enabled="true"
        android:gravity="center"
        android:text="设置提醒"
        android:textColor="@color/white"
        android:textSize="34px" />

    <TextView
        android:id="@+id/tv_time_product_details_buy_it"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_deep_red_yel_gray"
        android:clickable="true"
        android:gravity="center"
        android:text="提前预览"
        android:textColor="@color/white"
        android:textSize="34px" />
</LinearLayout>