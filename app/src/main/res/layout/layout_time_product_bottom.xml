<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_98"
    android:background="@drawable/border_top_5dp_gray"
    android:paddingTop="@dimen/dimen_5_dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time_product_details_service"
        android:layout_width="@dimen/sc_mm_125"
        android:paddingTop="@dimen/sc_mm_17"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/service_gray"

        android:gravity="center"
        android:text="客服"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_22" />

    <TextView
        android:id="@+id/tv_time_product_details_warm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_light_red_un_gray"
        android:enabled="true"
        android:gravity="center"
        android:text="设置提醒"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_34" />

    <TextView
        android:id="@+id/tv_time_product_details_buy_it"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sel_deep_red_yel_gray"

        android:gravity="center"
        android:text="提前预览"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_34" />
</LinearLayout>