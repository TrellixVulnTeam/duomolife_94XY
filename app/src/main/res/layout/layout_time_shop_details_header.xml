<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner_shop_time_details"
            android:layout_width="match_parent"
            android:layout_height="750px"
            app:layout_auto_basewidth = "height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5_dp"
            android:background="@color/bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="22px"
            android:paddingRight="28px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_down_time_prodetails"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_shop_time_product_name"
                android:textSize="32px"
                android:layout_marginTop="24px"
                android:textColor="@color/text_black_t"
                android:lineSpacingExtra="@dimen/dimen_6_dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="24px"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_shop_time_product_price"
                    android:textSize="34px"
                    android:textColor="@color/ct_deep_red_bg"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="62px"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_shop_time_product_mk_price"
                    android:textColor="@color/text_black_t"
                    android:textSize="26px"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray_bg"
            android:layout_height="22px"
            android:layout_marginBottom="20px"/>
    </LinearLayout>
</LinearLayout>