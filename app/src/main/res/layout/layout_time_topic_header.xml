<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_communal_img_bg"
        android:layout_width="match_parent"
        android:layout_height="403px"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth = "height"/>

    <RelativeLayout
        android:id="@+id/rel_topic_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90px"
        android:paddingLeft="22px">

        <View
            android:id="@+id/v_red"
            android:layout_width="6px"
            android:layout_height="34px"
            android:layout_centerVertical="true"
            android:background="@color/ct_deep_red_bg" />

        <TextView
            android:id="@+id/tv_topic_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            android:textColor="@color/text_black_t"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/v_red"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:paddingBottom="12px"
        android:paddingLeft="24px"
        android:paddingRight="@dimen/gap_right"
        android:paddingTop="12px"
        android:textColor="@color/home_text_color"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/iv_topic_details_index_bg"
        android:layout_width="match_parent"
        android:layout_height="403px"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />
</LinearLayout>