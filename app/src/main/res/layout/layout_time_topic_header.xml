<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_communal_img_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_403"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:id="@+id/rel_topic_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/sc_mm_90"
        android:paddingLeft="@dimen/sc_mm_22">

        <View
            android:id="@+id/v_red"
            android:layout_width="@dimen/sc_mm_6"
            android:layout_height="@dimen/sc_mm_34"
            android:layout_centerVertical="true"
            android:background="@color/ct_deep_red_bg" />

        <TextView
            android:id="@+id/tv_topic_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sc_mm_10"
            android:textSize="@dimen/sc_mm_30"
            android:textColor="@color/text_black_t"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/v_red"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/sc_mm_12"
        android:paddingLeft="@dimen/sc_mm_24"
        android:paddingRight="@dimen/gap_right"
        android:paddingTop="@dimen/sc_mm_12"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_30" />

    <ImageView
        android:id="@+id/iv_topic_details_index_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_403"
        android:scaleType="centerCrop"
         />
</LinearLayout>