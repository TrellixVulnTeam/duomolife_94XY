<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sc_mm_88"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_life_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/common_back_btn_nor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/gap_left"
        android:paddingRight="@dimen/gap_right"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/sc_mm_32"/>

    <TextView
        android:id="@+id/tv_header_shared"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:drawableRight="@drawable/common_share_btn_nor"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/gap_left"
        android:paddingRight="@dimen/gap_right"
        android:textColor="@color/selector_mine_warm_time"
        android:textSize="@dimen/sc_mm_32"/>
</RelativeLayout>
