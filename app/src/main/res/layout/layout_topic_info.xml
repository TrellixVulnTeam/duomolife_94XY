<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sc_mm_30"
    android:layout_marginTop="@dimen/sc_mm_5"
    android:layout_marginRight="@dimen/sc_mm_30"
    android:layout_marginBottom="@dimen/sc_mm_20"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/sc_mm_20"
    app:cardElevation="@dimen/sc_mm_10">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sc_mm_50"
        android:paddingTop="@dimen/sc_mm_45"
        android:paddingRight="@dimen/sc_mm_50"
        android:paddingBottom="@dimen/sc_mm_34">

        <android.support.text.emoji.widget.EmojiTextView
            android:id="@+id/tv_topic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/defaul"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_34"/>

        <TextView
            android:id="@+id/tv_score_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_16"
            android:gravity="center"
            android:text="参与有积分~"
            android:textColor="@color/text_normal_red"
            android:textSize="@dimen/sc_mm_24"/>

        <android.support.text.emoji.widget.EmojiTextView
            android:id="@+id/tv_topic_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_24"
            android:text="@string/defaul"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_26"/>

        <com.amkj.dmsh.views.JzVideo.JzVideoPlayerStatusDialog
            android:id="@+id/jvp_find_video_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_280"
            android:layout_marginLeft="@dimen/sc_mm_20"
            android:layout_marginTop="@dimen/sc_mm_24"
            android:layout_marginRight="@dimen/sc_mm_20"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_join_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_24"/>

            <TextView
                android:id="@+id/tv_topic_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sc_mm_10"
                android:layout_weight="1"
                android:text="@string/defaul"
                android:textColor="@color/text_login_gray_s"
                android:textSize="@dimen/sc_mm_24"/>

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sel_follow_topic"
                android:drawablePadding="@dimen/sc_mm_10"
                android:text="@string/follow_topic"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_26"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>