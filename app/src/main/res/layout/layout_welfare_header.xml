<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_communal_cover" />

    <TextView
        android:id="@+id/tv_welfare_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:paddingBottom="30px"
        android:paddingLeft="24px"
        android:paddingRight="@dimen/gap_right"
        android:paddingTop="30px"
        android:textColor="@color/text_black_t"
        android:textSize="30px"
        android:layout_marginBottom="15px"/>
    <include layout="@layout/layout_communal_detail_scroll_rec"/>
</LinearLayout>