<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/sc_mm_578"
        android:layout_height="wrap_content"
        android:background="@drawable/send_email_pw_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sc_mm_59"
        android:paddingTop="@dimen/sc_mm_36"
        android:paddingRight="@dimen/sc_mm_59"
        android:paddingBottom="@dimen/sc_mm_24">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发送至邮箱"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_32"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_100"
            android:layout_marginTop="@dimen/sc_mm_48"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_invoice_cover"
                android:layout_width="@dimen/sc_mm_100"
                android:layout_height="@dimen/sc_mm_100"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/sc_mm_48"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="多么生活购物发票原件"
                android:textSize="@dimen/sc_mm_30" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_40"
            android:background="@drawable/border_bottom_line"
            android:gravity="left"
            android:hint="@string/input_email_address"
            android:paddingBottom="@dimen/sc_mm_18"
            android:textSize="@dimen/sc_mm_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_28"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_alert_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/sc_mm_74"
                android:layout_weight="1"
                android:background="@drawable/sel_invoice_bg"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_28" />

            <TextView
                android:id="@+id/tv_alert_cancle"
                android:layout_width="0dp"
                android:layout_height="@dimen/sc_mm_74"
                android:layout_marginLeft="@dimen/sc_mm_30"
                android:layout_weight="1"
                android:background="@drawable/sel_invoice_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sc_mm_28"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>