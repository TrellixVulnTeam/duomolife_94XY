<?xml version="1.0" encoding="utf-8"?>
<com.lxj.xpopup.widget.SmartDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomPopupContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_all_comment_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_all_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sc_mm_28"
            android:text="全部评论"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_1"
            android:background="@color/text_color_e_s" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="match_parent"
            android:layout_height="800mm" />

        <include
            layout="@layout/layout_article_comment_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_120" />
    </LinearLayout>
</com.lxj.xpopup.widget.SmartDragLayout>







