<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray_f"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/sc_mm_64"
            android:layout_height="@dimen/sc_mm_64"
            android:layout_marginTop="@dimen/sc_mm_84"
            android:src="@drawable/commit_sucess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_11"
            android:text="评价成功，感谢您！"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_26" />

        <TextView
            android:id="@+id/tv_score_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sc_mm_16"
            android:text="@string/post_pass_get_score"
            android:textColor="@color/text_black_t"
            android:textSize="@dimen/sc_mm_24"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_my_evaluate"
            android:layout_width="@dimen/sc_mm_333"
            android:layout_height="@dimen/sc_mm_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sc_mm_20"
            android:layout_marginBottom="@dimen/sc_mm_83"
            android:background="@drawable/shap_share_bg_pink"
            android:gravity="center"
            android:text="查看我的评价"
            android:textColor="@color/white"
            android:textSize="@dimen/sc_mm_28" />

        <TextView
            android:id="@+id/tv_share_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/sc_mm_60"
            android:textColor="@color/color_blue_reply_com"
            android:textSize="@dimen/sc_mm_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sc_mm_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sc_mm_60"
            android:background="@color/white"
            android:gravity="center"
            android:text="还有没评价的宝贝～继续评价可获得更多奖励"
            android:textColor="@color/text_login_gray_s"
            android:textSize="@dimen/sc_mm_22" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_f"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingTop="@dimen/sc_mm_26"
        android:paddingBottom="@dimen/sc_mm_15"
        android:text="Ta们都在说"
        android:textColor="@color/text_black_t"
        android:textSize="@dimen/sc_mm_30" />
</LinearLayout>