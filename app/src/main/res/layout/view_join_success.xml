<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sc_mm_160"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/commit_sucess"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sc_mm_42"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交成功"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_40"/>

            <TextView
                android:id="@+id/tv_score_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sc_mm_16"
                android:text="@string/post_pass_get_score"
                android:textColor="@color/text_black_t"
                android:textSize="@dimen/sc_mm_24"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="@dimen/sc_mm_300"
        android:layout_height="@dimen/sc_mm_68"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shap_share_bg_pink"
        android:gravity="center"
        android:text="把它分享给好友"
        android:textColor="@color/white"
        android:textSize="@dimen/sc_mm_28"/>

    <TextView
        android:id="@+id/tv_share_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sc_mm_16"
        android:layout_marginBottom="@dimen/sc_mm_60"
        android:textColor="@color/color_blue_reply_com"
        android:textSize="@dimen/sc_mm_24"/>

    <TextView
        android:id="@+id/tv_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_f"
        android:paddingLeft="@dimen/sc_mm_30"
        android:paddingTop="@dimen/sc_mm_30"
        android:paddingBottom="@dimen/sc_mm_20"
        android:text="Ta们都在说"
        android:textColor="@color/text_black_t"/>
</LinearLayout>